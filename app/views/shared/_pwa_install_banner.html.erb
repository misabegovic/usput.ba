<%# PWA Install Banner - shown to mobile users who are not using the installed PWA %>
<%# Desktop Banner - shown to desktop users informing about mobile app availability %>
<div data-controller="pwa-install">
  <%# Mobile Install Banner - visible only on mobile %>
  <div data-pwa-install-target="banner" class="hidden md:!hidden fixed top-0 left-0 right-0 z-[60] bg-gradient-to-r from-blue-600 to-blue-700 dark:from-blue-700 dark:to-blue-800 text-white shadow-lg">
    <div class="px-4 py-3">
      <div class="flex items-center justify-between gap-3">
        <%# App icon and message %>
        <div class="flex items-center gap-3 flex-1 min-w-0">
          <div class="flex-shrink-0 w-10 h-10 bg-white rounded-xl shadow-md flex items-center justify-center p-1.5">
            <img src="/usput-logo.png" alt="Usput" class="w-full h-full object-contain" onerror="this.parentElement.innerHTML='<span class=\'text-blue-600 font-bold text-lg\'>U</span>'">
          </div>
          <div class="min-w-0">
            <p class="font-semibold text-sm truncate"><%= t('pwa.install_title', default: 'Instaliraj Usput aplikaciju') %></p>
            <p class="text-xs text-blue-100 truncate"><%= t('pwa.install_subtitle', default: 'Brzi pristup i offline podrska') %></p>
          </div>
        </div>

        <%# Action buttons %>
        <div class="flex items-center gap-2 flex-shrink-0">
          <button
            data-action="click->pwa-install#install"
            class="bg-white text-blue-600 font-semibold text-sm px-4 py-2 rounded-lg shadow-sm hover:bg-blue-50 transition-colors"
          >
            <%= t('pwa.install_button', default: 'Instaliraj') %>
          </button>
          <button
            data-action="click->pwa-install#dismiss"
            class="text-white/80 hover:text-white p-2 transition-colors"
            aria-label="<%= t('common.close', default: 'Zatvori') %>"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>

  <%# Desktop Banner - shown via JavaScript only on desktop when not in PWA mode %>
  <div data-pwa-install-target="desktopBanner" class="hidden fixed top-0 left-0 right-0 z-[60] bg-gradient-to-r from-blue-600 to-blue-700 dark:from-blue-700 dark:to-blue-800 text-white shadow-lg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
      <div class="flex items-center justify-between gap-4">
        <%# App icon and message %>
        <div class="flex items-center gap-4 flex-1">
          <div class="flex-shrink-0 flex items-center gap-3">
            <div class="w-10 h-10 bg-white rounded-xl shadow-md flex items-center justify-center p-1.5">
              <img src="/usput-logo.png" alt="Usput" class="w-full h-full object-contain" onerror="this.parentElement.innerHTML='<span class=\'text-blue-600 font-bold text-lg\'>U</span>'">
            </div>
            <%# Mobile phone icon %>
            <svg class="w-6 h-6 text-blue-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div>
            <p class="font-semibold text-sm"><%= t('pwa.desktop_title', default: 'Dostupno na mobitelu') %></p>
            <p class="text-xs text-blue-100"><%= t('pwa.desktop_subtitle', default: 'Otvori ovu stranicu na telefonu da instaliras aplikaciju') %></p>
          </div>
        </div>

        <%# Close button %>
        <button
          data-action="click->pwa-install#dismiss"
          class="text-white/80 hover:text-white p-2 transition-colors"
          aria-label="<%= t('common.close', default: 'Zatvori') %>"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <%# iOS Instructions Modal - only on mobile %>
  <div data-pwa-install-target="iosModal" class="hidden fixed inset-0 z-[60] flex items-end justify-center md:hidden">
    <%# Backdrop %>
    <div
      class="absolute inset-0 bg-black/50 backdrop-blur-sm"
      data-action="click->pwa-install#hideIOSInstructions"
    ></div>

    <%# Modal content %>
    <div class="relative bg-white dark:bg-gray-800 rounded-t-2xl w-full max-w-lg shadow-2xl animate-slide-in">
      <div class="p-6">
        <%# Header %>
        <div class="flex items-center justify-between mb-6">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-xl flex items-center justify-center p-2">
              <img src="/usput-logo.png" alt="Usput" class="w-full h-full object-contain" onerror="this.parentElement.innerHTML='<span class=\'text-blue-600 dark:text-blue-400 font-bold text-xl\'>U</span>'">
            </div>
            <div>
              <h3 class="font-bold text-lg text-gray-900 dark:text-white"><%= t('pwa.ios_title', default: 'Dodaj na pocetni ekran') %></h3>
              <p class="text-sm text-gray-500 dark:text-gray-400">Usput.ba</p>
            </div>
          </div>
          <button
            data-action="click->pwa-install#hideIOSInstructions"
            class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 p-2"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <%# Instructions %>
        <div class="space-y-4">
          <%# Step 1 %>
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 w-8 h-8 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center text-blue-600 dark:text-blue-400 font-bold text-sm">1</div>
            <div class="flex-1">
              <p class="text-gray-700 dark:text-gray-300">
                <%= t('pwa.ios_step1', default: 'Klikni na') %>
                <span class="inline-flex items-center justify-center w-6 h-6 bg-gray-100 dark:bg-gray-700 rounded">
                  <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path>
                  </svg>
                </span>
                <%= t('pwa.ios_share_button', default: '(Share) dugme u browseru') %>
              </p>
            </div>
          </div>

          <%# Step 2 %>
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 w-8 h-8 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center text-blue-600 dark:text-blue-400 font-bold text-sm">2</div>
            <div class="flex-1">
              <p class="text-gray-700 dark:text-gray-300">
                <%= t('pwa.ios_step2', default: 'Skrolaj i odaberi') %>
                <span class="inline-flex items-center gap-1 px-2 py-1 bg-gray-100 dark:bg-gray-700 rounded text-sm font-medium">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                  </svg>
                  <%= t('pwa.ios_add_home', default: 'Add to Home Screen') %>
                </span>
              </p>
            </div>
          </div>

          <%# Step 3 %>
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 w-8 h-8 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center text-blue-600 dark:text-blue-400 font-bold text-sm">3</div>
            <div class="flex-1">
              <p class="text-gray-700 dark:text-gray-300">
                <%= t('pwa.ios_step3', default: 'Klikni "Add" u gornjem desnom uglu') %>
              </p>
            </div>
          </div>
        </div>

        <%# Benefits %>
        <div class="mt-6 p-4 bg-blue-50 dark:bg-blue-900/30 rounded-xl">
          <p class="text-sm text-blue-800 dark:text-blue-300 font-medium mb-2"><%= t('pwa.benefits_title', default: 'Prednosti aplikacije:') %></p>
          <ul class="text-sm text-blue-700 dark:text-blue-400 space-y-1">
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <%= t('pwa.benefit_fast', default: 'Brzi pristup s pocetnog ekrana') %>
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <%= t('pwa.benefit_offline', default: 'Radi i bez interneta') %>
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <%= t('pwa.benefit_fullscreen', default: 'Puni ekran bez browser trake') %>
            </li>
          </ul>
        </div>

        <%# Close button %>
        <button
          data-action="click->pwa-install#hideIOSInstructions"
          class="mt-6 w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded-xl transition-colors"
        >
          <%= t('pwa.got_it', default: 'Razumijem') %>
        </button>
      </div>
    </div>
  </div>
</div>
