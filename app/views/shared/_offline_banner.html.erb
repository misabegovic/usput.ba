<%# Offline Banner - shown when user loses internet connection %>
<div data-controller="offline-banner">
  <div data-offline-banner-target="banner" class="hidden fixed bottom-0 left-0 right-0 z-50 bg-gradient-to-r from-amber-500 to-orange-500 dark:from-amber-600 dark:to-orange-600 text-white shadow-lg">
    <div class="px-4 py-3">
      <div class="flex items-center justify-between gap-3">
        <%# Offline icon and message %>
        <div class="flex items-center gap-3 flex-1 min-w-0">
          <div class="flex-shrink-0 w-10 h-10 bg-white/20 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636a9 9 0 010 12.728m0 0l-2.829-2.829m2.829 2.829L21 21M15.536 8.464a5 5 0 010 7.072m0 0l-2.829-2.829m-4.243 2.829a4.978 4.978 0 01-1.414-2.83m-1.414 5.658a9 9 0 01-2.167-9.238m7.824 2.167a1 1 0 111.414 1.414m-1.414-1.414L3 3"></path>
            </svg>
          </div>
          <div class="min-w-0">
            <p class="font-semibold text-sm truncate"><%= t('offline.title', default: 'Nema internet veze') %></p>
            <p class="text-xs text-amber-100 truncate"><%= t('offline.subtitle', default: 'Tvoj profil je i dalje dostupan') %></p>
          </div>
        </div>

        <%# Action buttons %>
        <div class="flex items-center gap-2 flex-shrink-0">
          <%= link_to profile_page_path,
                      class: "bg-white text-amber-600 font-semibold text-sm px-4 py-2 rounded-lg shadow-sm hover:bg-amber-50 transition-colors flex items-center gap-2" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <%= t('offline.view_profile', default: 'Moj Profil') %>
          <% end %>
          <button
            data-action="click->offline-banner#dismiss"
            class="text-white/80 hover:text-white p-2 transition-colors"
            aria-label="<%= t('common.close', default: 'Zatvori') %>"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
