<!DOCTYPE html>
<html class="h-full" lang="<%= I18n.locale %>" data-turbo-prefetch="false">
  <head>
    <title><%= content_for(:title) || t("admin.title") %> - Usput</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="robots" content="noindex, nofollow">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="h-full bg-gray-100">
    <div class="min-h-full">
      <!-- Navigation -->
      <nav class="bg-indigo-700" data-controller="admin-menu">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="flex h-16 items-center justify-between">
            <div class="flex items-center">
              <div class="shrink-0">
                <span class="text-white text-xl font-bold"><%= t("admin.title") %></span>
              </div>
              <!-- Desktop Navigation -->
              <div class="hidden md:ml-10 md:flex md:items-baseline md:space-x-4">
                <%= link_to t("admin.nav.dashboard"), admin_root_path,
                    class: "rounded-md px-3 py-2 text-sm font-medium #{request.path == admin_root_path ? 'bg-indigo-800 text-white' : 'text-indigo-100 hover:bg-indigo-600'}" %>
                <%= link_to t("admin.nav.users"), admin_users_path,
                    class: "rounded-md px-3 py-2 text-sm font-medium #{request.path.start_with?(admin_users_path) ? 'bg-indigo-800 text-white' : 'text-indigo-100 hover:bg-indigo-600'}" %>
                <%= link_to t("admin.nav.applications"), admin_curator_applications_path,
                    class: "rounded-md px-3 py-2 text-sm font-medium #{request.path.start_with?(admin_curator_applications_path) ? 'bg-indigo-800 text-white' : 'text-indigo-100 hover:bg-indigo-600'}" %>
                <%= link_to t("admin.nav.content_proposals"), admin_content_changes_path,
                    class: "rounded-md px-3 py-2 text-sm font-medium #{request.path.start_with?(admin_content_changes_path) ? 'bg-indigo-800 text-white' : 'text-indigo-100 hover:bg-indigo-600'}" %>
                <%= link_to t("admin.nav.photo_suggestions"), admin_photo_suggestions_path,
                    class: "rounded-md px-3 py-2 text-sm font-medium #{request.path.start_with?(admin_photo_suggestions_path) ? 'bg-indigo-800 text-white' : 'text-indigo-100 hover:bg-indigo-600'}" %>
                <%= link_to t("admin.nav.ai_generator"), admin_ai_path,
                    class: "rounded-md px-3 py-2 text-sm font-medium #{request.path.start_with?(admin_ai_path) ? 'bg-indigo-800 text-white' : 'text-indigo-100 hover:bg-indigo-600'}" %>
              </div>
            </div>
            <!-- Desktop Actions -->
            <div class="hidden md:flex md:items-center md:space-x-4">
              <%= link_to t("nav.back_to_site"), root_path, class: "text-indigo-200 hover:text-white text-sm" %>
              <%= button_to t("admin.session.logout_button"), admin_logout_path, method: :delete, class: "rounded-md bg-indigo-800 px-3 py-2 text-sm font-medium text-white hover:bg-indigo-900" %>
            </div>
            <!-- Mobile menu button -->
            <div class="md:hidden">
              <button type="button" data-action="click->admin-menu#toggle" class="inline-flex items-center justify-center rounded-md p-2 text-indigo-200 hover:bg-indigo-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white">
                <span class="sr-only">Open main menu</span>
                <!-- Hamburger icon -->
                <svg class="block h-6 w-6" data-admin-menu-target="openIcon" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                </svg>
                <!-- Close icon -->
                <svg class="hidden h-6 w-6" data-admin-menu-target="closeIcon" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- Mobile menu -->
        <div class="hidden md:hidden" data-admin-menu-target="menu">
          <div class="space-y-1 px-2 pb-3 pt-2">
            <%= link_to t("admin.nav.dashboard"), admin_root_path,
                class: "block rounded-md px-3 py-2 text-base font-medium #{request.path == admin_root_path ? 'bg-indigo-800 text-white' : 'text-indigo-100 hover:bg-indigo-600'}" %>
            <%= link_to t("admin.nav.users"), admin_users_path,
                class: "block rounded-md px-3 py-2 text-base font-medium #{request.path.start_with?(admin_users_path) ? 'bg-indigo-800 text-white' : 'text-indigo-100 hover:bg-indigo-600'}" %>
            <%= link_to t("admin.nav.applications"), admin_curator_applications_path,
                class: "block rounded-md px-3 py-2 text-base font-medium #{request.path.start_with?(admin_curator_applications_path) ? 'bg-indigo-800 text-white' : 'text-indigo-100 hover:bg-indigo-600'}" %>
            <%= link_to t("admin.nav.content_proposals"), admin_content_changes_path,
                class: "block rounded-md px-3 py-2 text-base font-medium #{request.path.start_with?(admin_content_changes_path) ? 'bg-indigo-800 text-white' : 'text-indigo-100 hover:bg-indigo-600'}" %>
            <%= link_to t("admin.nav.photo_suggestions"), admin_photo_suggestions_path,
                class: "block rounded-md px-3 py-2 text-base font-medium #{request.path.start_with?(admin_photo_suggestions_path) ? 'bg-indigo-800 text-white' : 'text-indigo-100 hover:bg-indigo-600'}" %>
            <%= link_to t("admin.nav.ai_generator"), admin_ai_path,
                class: "block rounded-md px-3 py-2 text-base font-medium #{request.path.start_with?(admin_ai_path) ? 'bg-indigo-800 text-white' : 'text-indigo-100 hover:bg-indigo-600'}" %>
          </div>
          <div class="border-t border-indigo-600 pb-3 pt-4">
            <div class="flex items-center justify-between px-4">
              <%= link_to t("nav.back_to_site"), root_path, class: "text-indigo-200 hover:text-white text-sm" %>
              <%= button_to t("admin.session.logout_button"), admin_logout_path, method: :delete, class: "rounded-md bg-indigo-800 px-3 py-2 text-sm font-medium text-white hover:bg-indigo-900" %>
            </div>
          </div>
        </div>
      </nav>

      <!-- Flash Messages -->
      <% if notice %>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-4">
          <div class="rounded-md bg-green-50 p-4">
            <p class="text-sm font-medium text-green-800"><%= notice %></p>
          </div>
        </div>
      <% end %>

      <% if alert %>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-4">
          <div class="rounded-md bg-red-50 p-4">
            <p class="text-sm font-medium text-red-800"><%= alert %></p>
          </div>
        </div>
      <% end %>

      <!-- Main Content -->
      <main>
        <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
          <%= yield %>
        </div>
      </main>
    </div>
  </body>
</html>
