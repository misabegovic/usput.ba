<div class="min-h-screen flex flex-col">
  <%# Navigation %>
  <nav class="bg-white dark:bg-gray-800 shadow-lg sticky top-0 z-50 transition-colors duration-300">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <%# Logo %>
        <div class="flex items-center">
          <a href="/" class="flex items-center space-x-2">
            <img src="/usput-logo.png" alt="Usput" class="h-10 w-auto">
            <span class="text-2xl font-bold bg-gradient-to-r from-emerald-600 to-teal-600 bg-clip-text text-transparent">Usput.ba</span>
          </a>
        </div>

        <%# Desktop Navigation %>
        <div class="hidden md:flex items-center space-x-6">
          <%= link_to t("nav.explore"), explore_path, class: "text-gray-700 dark:text-gray-300 hover:text-emerald-600 dark:hover:text-emerald-400 font-medium transition-colors" %>
          <%= link_to t("nav.plans"), plans_path, class: "text-gray-700 dark:text-gray-300 hover:text-emerald-600 dark:hover:text-emerald-400 font-medium transition-colors" %>

          <%# Theme Toggle %>
          <div data-controller="theme">
            <button data-action="click->theme#toggle"
                    class="p-2 rounded-lg text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
                    aria-label="Toggle theme">
              <span data-theme-target="icon">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
                </svg>
              </span>
            </button>
          </div>

          <%= link_to plan_wizard_path, class: "bg-gradient-to-r from-emerald-500 to-teal-600 text-white px-6 py-2 rounded-lg font-medium hover:from-emerald-600 hover:to-teal-700 transition-all shadow-md hover:shadow-lg" do %>
            <%= t("home.cta.start") %>
          <% end %>
        </div>

        <%# Mobile menu button %>
        <div class="flex items-center md:hidden space-x-2">
          <div data-controller="theme">
            <button data-action="click->theme#toggle"
                    class="p-2 rounded-lg text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
                    aria-label="Toggle theme">
              <span data-theme-target="icon">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
                </svg>
              </span>
            </button>
          </div>

          <a href="/" class="p-2 rounded-lg text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </nav>

  <%# Main Content %>
  <main class="flex-grow bg-gray-50 dark:bg-gray-900 transition-colors duration-300">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <%# Header %>
      <div class="text-center mb-12">
        <h1 class="text-4xl sm:text-5xl font-extrabold text-gray-900 dark:text-white mb-4">
          <%= t("terms.title", default: "Uvjeti korištenja") %>
        </h1>
        <p class="text-gray-500 dark:text-gray-400 text-sm">
          <%= t("terms.last_updated", default: "Posljednje ažuriranje") %>: <%= Date.today.strftime("%d.%m.%Y") %>
        </p>
        <div class="w-24 h-1 bg-gradient-to-r from-emerald-500 to-teal-600 mx-auto rounded-full mt-4"></div>
      </div>

      <%# Terms Content %>
      <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl p-8 md:p-12 transition-colors duration-300">
        <div class="prose dark:prose-invert max-w-none">

          <%# Introduction %>
          <section class="mb-10">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 flex items-center">
              <svg class="w-6 h-6 mr-3 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              1. <%= t("terms.intro.title", default: "Opće odredbe") %>
            </h2>
            <div class="text-gray-600 dark:text-gray-400 space-y-3">
              <p><%= t("terms.intro.text1", default: "Dobrodošli na Usput. Korištenjem ove web stranice i usluga prihvaćate ove uvjete korištenja u cijelosti.") %></p>
              <p><%= t("terms.intro.text2", default: "Operater ove web stranice je Muhamed Isabegovic, samostalni poduzetnik sa sjedištem u Austriji.") %></p>
              <p><%= t("terms.intro.text3", default: "Ako se ne slažete s ovim uvjetima, molimo vas da ne koristite našu web stranicu.") %></p>
            </div>
          </section>

          <%# Service Description %>
          <section class="mb-10">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 flex items-center">
              <svg class="w-6 h-6 mr-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
              </svg>
              2. <%= t("terms.service.title", default: "Opis usluge") %>
            </h2>
            <div class="text-gray-600 dark:text-gray-400 space-y-3">
              <p><%= t("terms.service.text1", default: "Usput je platforma za otkrivanje i planiranje putovanja koja omogućava korisnicima da:") %></p>
              <ul class="list-disc list-inside space-y-2 ml-4">
                <li><%= t("terms.service.feature1", default: "Pregledaju iskustva i lokacije") %></li>
                <li><%= t("terms.service.feature2", default: "Kreiraju personalizirane planove putovanja") %></li>
                <li><%= t("terms.service.feature3", default: "Ostavljaju recenzije i ocjene") %></li>
                <li><%= t("terms.service.feature4", default: "Kreiraju korisnički račun za trajno čuvanje profila") %></li>
              </ul>
              <p><%= t("terms.service.text2", default: "Usluga je besplatna za korištenje. Zadržavamo pravo da u budućnosti uvedemo premium funkcije.") %></p>
            </div>
          </section>

          <%# User Registration %>
          <section class="mb-10">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 flex items-center">
              <svg class="w-6 h-6 mr-3 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              3. <%= t("terms.registration.title", default: "Registracija korisnika") %>
            </h2>
            <div class="text-gray-600 dark:text-gray-400 space-y-3">
              <p><%= t("terms.registration.text1", default: "Za korištenje određenih funkcija potrebna je registracija. Registracijom jamčite da:") %></p>
              <ul class="list-disc list-inside space-y-2 ml-4">
                <li><%= t("terms.registration.req1", default: "Imate najmanje 16 godina") %></li>
                <li><%= t("terms.registration.req2", default: "Pružate tačne informacije") %></li>
                <li><%= t("terms.registration.req3", default: "Čuvate povjerljivost svojih pristupnih podataka") %></li>
                <li><%= t("terms.registration.req4", default: "Ste odgovorni za sve aktivnosti na svom računu") %></li>
              </ul>
            </div>
          </section>

          <%# User Content %>
          <section class="mb-10">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 flex items-center">
              <svg class="w-6 h-6 mr-3 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              4. <%= t("terms.content.title", default: "Korisnički sadržaj") %>
            </h2>
            <div class="text-gray-600 dark:text-gray-400 space-y-3">
              <p><%= t("terms.content.text1", default: "Objavljivanjem sadržaja (recenzije, ocjene) na našoj platformi:") %></p>
              <ul class="list-disc list-inside space-y-2 ml-4">
                <li><%= t("terms.content.grant1", default: "Dajete nam neisključivu licencu za korištenje, prikazivanje i distribuciju tog sadržaja") %></li>
                <li><%= t("terms.content.grant2", default: "Jamčite da imate pravo objaviti taj sadržaj") %></li>
                <li><%= t("terms.content.grant3", default: "Jamčite da sadržaj ne krši prava trećih strana") %></li>
              </ul>
              <p><%= t("terms.content.prohibited", default: "Zabranjeno je objavljivanje sadržaja koji je:") %></p>
              <ul class="list-disc list-inside space-y-2 ml-4 text-red-600 dark:text-red-400">
                <li><%= t("terms.content.prohibited1", default: "Nezakonit, uvredljiv ili diskriminirajući") %></li>
                <li><%= t("terms.content.prohibited2", default: "Lažan ili obmanjujući") %></li>
                <li><%= t("terms.content.prohibited3", default: "Spam ili neželjena reklama") %></li>
                <li><%= t("terms.content.prohibited4", default: "Sadržaj koji krši autorska prava") %></li>
              </ul>
            </div>
          </section>

          <%# Intellectual Property %>
          <section class="mb-10">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 flex items-center">
              <svg class="w-6 h-6 mr-3 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
              5. <%= t("terms.ip.title", default: "Intelektualno vlasništvo") %>
            </h2>
            <div class="text-gray-600 dark:text-gray-400 space-y-3">
              <p><%= t("terms.ip.text1", default: "Sav sadržaj na ovoj web stranici (uključujući tekst, grafiku, logotipe, ikone, slike i softver) je vlasništvo Usput ili naših davatelja licenci i zaštićen je zakonima o autorskim pravima.") %></p>
              <p><%= t("terms.ip.text2", default: "Nije dozvoljeno kopiranje, distribucija, modifikacija ili kreiranje izvedenih djela bez našeg izričitog pisanog odobrenja.") %></p>
            </div>
          </section>

          <%# Disclaimer %>
          <section class="mb-10">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 flex items-center">
              <svg class="w-6 h-6 mr-3 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
              </svg>
              6. <%= t("terms.disclaimer.title", default: "Odricanje odgovornosti") %>
            </h2>
            <div class="text-gray-600 dark:text-gray-400 space-y-3">
              <p><%= t("terms.disclaimer.text1", default: "Usluga se pruža \"kakva jest\" bez ikakvih garancija, izričitih ili impliciranih.") %></p>
              <p><%= t("terms.disclaimer.text2", default: "Ne garantujemo:") %></p>
              <ul class="list-disc list-inside space-y-2 ml-4">
                <li><%= t("terms.disclaimer.item1", default: "Neprekidnu ili sigurnu dostupnost usluge") %></li>
                <li><%= t("terms.disclaimer.item2", default: "Tačnost ili potpunost informacija o lokacijama i iskustvima") %></li>
                <li><%= t("terms.disclaimer.item3", default: "Da će usluga ispuniti vaše specifične potrebe") %></li>
              </ul>
              <p><%= t("terms.disclaimer.text3", default: "Koristite informacije na vlastitu odgovornost. Uvijek provjerite informacije kod službenih izvora prije putovanja.") %></p>
            </div>
          </section>

          <%# Limitation of Liability %>
          <section class="mb-10">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 flex items-center">
              <svg class="w-6 h-6 mr-3 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path>
              </svg>
              7. <%= t("terms.liability.title", default: "Ograničenje odgovornosti") %>
            </h2>
            <div class="text-gray-600 dark:text-gray-400 space-y-3">
              <p><%= t("terms.liability.text1", default: "U maksimalnom opsegu dozvoljenom zakonom, ne snosimo odgovornost za:") %></p>
              <ul class="list-disc list-inside space-y-2 ml-4">
                <li><%= t("terms.liability.item1", default: "Indirektne, slučajne ili posljedične štete") %></li>
                <li><%= t("terms.liability.item2", default: "Gubitak podataka ili profita") %></li>
                <li><%= t("terms.liability.item3", default: "Štete nastale korištenjem ili nemogućnošću korištenja usluge") %></li>
              </ul>
              <p><%= t("terms.liability.text2", default: "Ovo ograničenje odgovornosti ne utječe na vaša zakonska prava kao potrošača prema austrijskom pravu.") %></p>
            </div>
          </section>

          <%# Termination %>
          <section class="mb-10">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 flex items-center">
              <svg class="w-6 h-6 mr-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
              8. <%= t("terms.termination.title", default: "Prekid usluge") %>
            </h2>
            <div class="text-gray-600 dark:text-gray-400 space-y-3">
              <p><%= t("terms.termination.text1", default: "Možete prestati koristiti uslugu u bilo kojem trenutku brisanjem svog računa.") %></p>
              <p><%= t("terms.termination.text2", default: "Zadržavamo pravo da:") %></p>
              <ul class="list-disc list-inside space-y-2 ml-4">
                <li><%= t("terms.termination.item1", default: "Suspendujemo ili ukinemo vaš račun zbog kršenja uvjeta") %></li>
                <li><%= t("terms.termination.item2", default: "Modificiramo ili prekinemo pružanje usluge uz razumnu najavu") %></li>
              </ul>
            </div>
          </section>

          <%# Changes to Terms %>
          <section class="mb-10">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 flex items-center">
              <svg class="w-6 h-6 mr-3 text-teal-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
              </svg>
              9. <%= t("terms.changes.title", default: "Izmjene uvjeta") %>
            </h2>
            <div class="text-gray-600 dark:text-gray-400 space-y-3">
              <p><%= t("terms.changes.text1", default: "Zadržavamo pravo izmjene ovih uvjeta u bilo kojem trenutku. Značajne izmjene ćemo objaviti na web stranici.") %></p>
              <p><%= t("terms.changes.text2", default: "Nastavkom korištenja usluge nakon izmjena smatrat će se da ste prihvatili nove uvjete.") %></p>
            </div>
          </section>

          <%# Governing Law %>
          <section class="mb-10">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 flex items-center">
              <svg class="w-6 h-6 mr-3 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"></path>
              </svg>
              10. <%= t("terms.law.title", default: "Mjerodavno pravo") %>
            </h2>
            <div class="text-gray-600 dark:text-gray-400 space-y-3">
              <p><%= t("terms.law.text1", default: "Ovi uvjeti korištenja podliježu zakonima Republike Austrije.") %></p>
              <p><%= t("terms.law.text2", default: "Za rješavanje sporova nadležni su sudovi u Austriji, osim ako obavezujuće odredbe potrošačkog prava ne odrede drugačije.") %></p>
            </div>
          </section>

          <%# Contact %>
          <section>
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 flex items-center">
              <svg class="w-6 h-6 mr-3 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              11. <%= t("terms.contact.title", default: "Kontakt") %>
            </h2>
            <div class="text-gray-600 dark:text-gray-400">
              <p><%= t("terms.contact.text", default: "Za pitanja o ovim uvjetima korištenja, kontaktirajte nas na:") %></p>
              <p class="mt-2">
                <a href="mailto:info@muhamed.at" class="text-emerald-600 dark:text-emerald-400 hover:underline font-medium">info@muhamed.at</a>
              </p>
            </div>
          </section>

        </div>
      </div>

      <%# Back to Home %>
      <div class="text-center mt-12">
        <%= link_to root_path, class: "inline-flex items-center text-emerald-600 dark:text-emerald-400 font-medium hover:underline" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          <%= t("common.back_to_home", default: "Nazad na pocetnu") %>
        <% end %>
      </div>
    </div>
  </main>

  <%# Footer %>
  <footer class="bg-gray-900 dark:bg-black text-gray-400 transition-colors duration-300">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex flex-col sm:flex-row justify-between items-center space-y-4 sm:space-y-0">
        <div class="flex items-center space-x-2">
          <img src="/usput-logo.png" alt="Usput" class="h-8 w-auto">
          <span class="text-white font-semibold">Usput.ba</span>
        </div>
        <p class="text-sm">
          &copy; <%= Time.current.year %> Usput. <%= t("footer.rights", default: "Sva prava pridrzana.") %>
        </p>
      </div>
    </div>
  </footer>
</div>
