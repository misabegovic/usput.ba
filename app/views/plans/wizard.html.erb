<div class="min-h-screen bg-gray-50 dark:bg-gray-900 py-12 px-4 sm:px-6 lg:px-8"
     data-controller="plan-wizard"
     data-plan-wizard-find-city-url-value="/plans/find_city"
     data-plan-wizard-search-cities-url-value="/plans/search_cities"
     data-plan-wizard-generate-url-value="/plans/generate"
     data-plan-wizard-total-steps-value="4"
     data-plan-wizard-geolocation-not-supported-value="<%= t('wizard.errors.geolocation_not_supported') %>"
     data-plan-wizard-location-failed-value="<%= t('wizard.errors.location_failed') %>"
     data-plan-wizard-permission-denied-value="<%= t('wizard.errors.permission_denied') %>"
     data-plan-wizard-location-unavailable-value="<%= t('wizard.errors.location_unavailable') %>"
     data-plan-wizard-location-timeout-value="<%= t('wizard.errors.location_timeout') %>"
     data-plan-wizard-no-city-found-value="<%= t('wizard.errors.no_city_found') %>"
     data-plan-wizard-city-lookup-error-value="<%= t('wizard.errors.city_lookup_error') %>"
     data-plan-wizard-enable-location-value="<%= t('wizard.errors.enable_location') %>"
     data-plan-wizard-no-search-results-value="<%= t('wizard.errors.no_search_results') %>"
     data-plan-wizard-server-error-value="<%= t('wizard.errors.server_error') %>"
     <% if @city_name.present? %>data-plan-wizard-preset-city-name-value="<%= @city_name %>"<% end %>>

  <div class="max-w-2xl mx-auto">
    <!-- Header with Language Selector -->
    <div class="flex justify-end mb-4">
      <%= render "shared/language_selector" %>
    </div>

    <div class="text-center mb-6 sm:mb-8">
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-2">
        <%= t('wizard.title') %>
      </h1>
      <p class="text-sm sm:text-base text-gray-600 dark:text-gray-400">
        <%= t('wizard.generate.subtitle') %>
      </p>
    </div>

    <!-- Progress indicators -->
    <div class="flex justify-center items-center space-x-1.5 sm:space-x-2 mb-6 sm:mb-8">
      <% 4.times do |i| %>
        <div class="h-2 w-8 sm:w-12 rounded-full transition-colors duration-300 <%= i == 0 ? 'bg-primary-600 dark:bg-primary-500' : 'bg-gray-300 dark:bg-gray-600' %>"
             data-plan-wizard-target="stepIndicator"></div>
      <% end %>
    </div>

    <!-- Wizard Card -->
    <div class="card">
      <!-- Step 0: Location -->
      <div data-plan-wizard-target="step" class="animate-fade-in">
        <div class="text-center py-8">
          <div class="w-20 h-20 bg-primary-100 dark:bg-primary-900/30 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>

          <h2 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-white mb-2">
            <%= t('wizard.location.title') %>
          </h2>
          <p class="text-sm sm:text-base text-gray-600 dark:text-gray-400 mb-6 sm:mb-8">
            <%= t('wizard.location.subtitle') %>
          </p>

          <% if @city_name.present? %>
            <!-- Preset city from URL -->
            <div data-plan-wizard-target="locationStatus" class="mb-6">
              <div data-plan-wizard-target="locationSuccess" class="flex items-center justify-center space-x-2 text-green-600 dark:text-green-400">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-lg font-medium" data-plan-wizard-target="cityNameDisplay"><%= @city_name %></span>
              </div>
            </div>
          <% else %>
            <!-- Geolocation request -->
            <button type="button"
                    class="btn-primary text-lg px-8 py-3 mb-4"
                    data-action="click->plan-wizard#requestLocation">
              <svg class="w-5 h-5 inline-block mr-2 -mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              </svg>
              <%= t('wizard.location.detect') %>
            </button>

            <!-- Or manual selection link -->
            <div class="mb-6">
              <button type="button"
                      class="text-sm text-gray-500 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 underline"
                      data-action="click->plan-wizard#showManualCityInput">
                <%= t('wizard.location.manual_select', default: 'ili odaberi grad ru캜no') %>
              </button>
            </div>

            <div data-plan-wizard-target="locationStatus" class="hidden mt-6">
              <!-- Loading -->
              <div data-plan-wizard-target="locationLoading" class="flex flex-col items-center justify-center space-y-2 text-gray-600 dark:text-gray-400">
                <svg class="w-8 h-8 animate-spin" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <span><%= t('wizard.location.searching') %></span>
                <span class="text-xs text-gray-400"><%= t('wizard.location.searching_hint', default: 'Ovo mo쬰 potrajati nekoliko sekundi...') %></span>
              </div>

              <!-- Success -->
              <div data-plan-wizard-target="locationSuccess" class="hidden flex items-center justify-center space-x-2 text-green-600 dark:text-green-400">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-lg font-medium" data-plan-wizard-target="cityNameDisplay"></span>
              </div>

              <!-- Error with retry -->
              <div data-plan-wizard-target="locationError" class="hidden">
                <div class="flex items-center justify-center space-x-2 text-red-600 dark:text-red-400 mb-4">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                  </svg>
                  <span data-error-text></span>
                </div>

                <!-- Retry button -->
                <button type="button"
                        data-plan-wizard-target="locationRetry"
                        data-action="click->plan-wizard#retryLocation"
                        class="hidden btn-secondary text-sm mb-3">
                  <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                  </svg>
                  <%= t('common.retry', default: 'Poku코aj ponovo') %>
                </button>
              </div>
            </div>

            <!-- Manual city selection -->
            <div data-plan-wizard-target="manualCitySelect" class="hidden mt-6 w-full max-w-md mx-auto">
              <div class="relative">
                <input type="text"
                       data-plan-wizard-target="citySearchInput"
                       data-action="input->plan-wizard#searchCities"
                       placeholder="<%= t('wizard.location.search_placeholder', default: 'Pretra쬴 gradove...') %>"
                       class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent">
                <svg class="w-5 h-5 absolute right-3 top-1/2 -translate-y-1/2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
              </div>
              <!-- Search results -->
              <div data-plan-wizard-target="citySearchResults"
                   class="hidden mt-2 bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 max-h-60 overflow-y-auto">
              </div>
            </div>

          <% end %>
        </div>
      </div>

      <!-- Step 1: Duration -->
      <div data-plan-wizard-target="step" class="hidden">
        <div class="text-center mb-6 sm:mb-8">
          <h2 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-white mb-2">
            <%= t('wizard.dates.title') %>
          </h2>
          <p class="text-sm sm:text-base text-gray-600 dark:text-gray-400">
            <%= t('wizard.dates.duration') %>
          </p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-3 gap-3 sm:gap-4">
          <button type="button"
                  class="p-4 sm:p-6 border-2 border-gray-300 dark:border-gray-600 rounded-xl hover:border-primary-500 transition-colors text-center cursor-pointer"
                  data-plan-wizard-target="durationOption"
                  data-value="1"
                  data-action="click->plan-wizard#selectDuration">
            <span class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white block mb-1">1</span>
            <span class="text-gray-600 dark:text-gray-400 text-sm"><%= t('wizard.dates.days') %></span>
          </button>

          <button type="button"
                  class="p-4 sm:p-6 border-2 border-gray-300 dark:border-gray-600 rounded-xl hover:border-primary-500 transition-colors text-center cursor-pointer"
                  data-plan-wizard-target="durationOption"
                  data-value="2-3"
                  data-action="click->plan-wizard#selectDuration">
            <span class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white block mb-1">2-3</span>
            <span class="text-gray-600 dark:text-gray-400 text-sm"><%= t('wizard.dates.days') %></span>
          </button>

          <button type="button"
                  class="p-4 sm:p-6 border-2 border-gray-300 dark:border-gray-600 rounded-xl hover:border-primary-500 transition-colors text-center cursor-pointer"
                  data-plan-wizard-target="durationOption"
                  data-value="4+"
                  data-action="click->plan-wizard#selectDuration">
            <span class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white block mb-1">4+</span>
            <span class="text-gray-600 dark:text-gray-400 text-sm"><%= t('wizard.dates.days') %></span>
          </button>
        </div>
      </div>

      <!-- Step 2: Preferences -->
      <div data-plan-wizard-target="step" class="hidden">
        <div class="text-center mb-6 sm:mb-8">
          <h2 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-white mb-2">
            <%= t('wizard.interests.title') %>
          </h2>
          <p class="text-sm sm:text-base text-gray-600 dark:text-gray-400">
            <%= t('wizard.interests.subtitle') %>
          </p>
        </div>

        <!-- Meat preference -->
        <div class="mb-8">
          <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">
            <%= t('wizard.interests.meat') %>?
          </h3>
          <div class="grid grid-cols-2 gap-3 sm:gap-4">
            <button type="button"
                    class="p-3 sm:p-4 border-2 border-gray-300 dark:border-gray-600 rounded-xl hover:border-primary-500 transition-colors text-center cursor-pointer"
                    data-plan-wizard-target="meatOption"
                    data-value="true"
                    data-action="click->plan-wizard#selectMeat">
              <span class="text-2xl block mb-1">游볼</span>
              <span class="text-gray-900 dark:text-white font-medium text-sm sm:text-base"><%= t('common.yes') %></span>
            </button>

            <button type="button"
                    class="p-3 sm:p-4 border-2 border-gray-300 dark:border-gray-600 rounded-xl hover:border-primary-500 transition-colors text-center cursor-pointer"
                    data-plan-wizard-target="meatOption"
                    data-value="false"
                    data-action="click->plan-wizard#selectMeat">
              <span class="text-2xl block mb-1">游볭</span>
              <span class="text-gray-900 dark:text-white font-medium text-sm sm:text-base"><%= t('common.no') %></span>
            </button>
          </div>
        </div>

        <!-- Budget preference -->
        <div class="mb-8">
          <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">
            <%= t('activerecord.attributes.location.budget') %>
          </h3>
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-3 sm:gap-4">
            <button type="button"
                    class="p-3 sm:p-4 border-2 border-gray-300 dark:border-gray-600 rounded-xl hover:border-primary-500 transition-colors text-center cursor-pointer"
                    data-plan-wizard-target="budgetOption"
                    data-value="low"
                    data-action="click->plan-wizard#selectBudget">
              <span class="text-2xl block mb-1">游눯</span>
              <span class="text-gray-900 dark:text-white font-medium text-sm"><%= t('locations.budget.low') %></span>
            </button>

            <button type="button"
                    class="p-3 sm:p-4 border-2 border-gray-300 dark:border-gray-600 rounded-xl hover:border-primary-500 transition-colors text-center cursor-pointer"
                    data-plan-wizard-target="budgetOption"
                    data-value="medium"
                    data-action="click->plan-wizard#selectBudget">
              <span class="text-2xl block mb-1">游눯游눯</span>
              <span class="text-gray-900 dark:text-white font-medium text-sm"><%= t('locations.budget.medium') %></span>
            </button>

            <button type="button"
                    class="p-3 sm:p-4 border-2 border-gray-300 dark:border-gray-600 rounded-xl hover:border-primary-500 transition-colors text-center cursor-pointer"
                    data-plan-wizard-target="budgetOption"
                    data-value="high"
                    data-action="click->plan-wizard#selectBudget">
              <span class="text-2xl block mb-1">游눯游눯游눯</span>
              <span class="text-gray-900 dark:text-white font-medium text-sm"><%= t('locations.budget.high') %></span>
            </button>
          </div>
        </div>

        <!-- Daily hours preference -->
        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">
            <%= t('wizard.preferences.daily_hours', default: 'Koliko sati dnevno 쬰li코 razgledati?') %>
          </h3>
          <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
            <%= t('wizard.preferences.daily_hours_hint', default: 'Ovo uti캜e na broj iskustava po danu') %>
          </p>
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-3 sm:gap-4">
            <button type="button"
                    class="p-3 sm:p-4 border-2 border-gray-300 dark:border-gray-600 rounded-xl hover:border-primary-500 transition-colors text-center cursor-pointer"
                    data-plan-wizard-target="dailyHoursOption"
                    data-value="4"
                    data-action="click->plan-wizard#selectDailyHours">
              <span class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white block mb-1">4h</span>
              <span class="text-gray-600 dark:text-gray-400 text-xs"><%= t('wizard.preferences.relaxed', default: 'Opu코teno') %></span>
            </button>

            <button type="button"
                    class="p-3 sm:p-4 border-2 border-primary-500 bg-primary-50 dark:bg-primary-900/30 rounded-xl hover:border-primary-500 transition-colors text-center cursor-pointer"
                    data-plan-wizard-target="dailyHoursOption"
                    data-value="6"
                    data-action="click->plan-wizard#selectDailyHours">
              <span class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white block mb-1">6h</span>
              <span class="text-gray-600 dark:text-gray-400 text-xs"><%= t('wizard.preferences.balanced', default: 'Uravnote쬰no') %></span>
            </button>

            <button type="button"
                    class="p-3 sm:p-4 border-2 border-gray-300 dark:border-gray-600 rounded-xl hover:border-primary-500 transition-colors text-center cursor-pointer"
                    data-plan-wizard-target="dailyHoursOption"
                    data-value="8"
                    data-action="click->plan-wizard#selectDailyHours">
              <span class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white block mb-1">8h</span>
              <span class="text-gray-600 dark:text-gray-400 text-xs"><%= t('wizard.preferences.active', default: 'Aktivno') %></span>
            </button>

            <button type="button"
                    class="p-3 sm:p-4 border-2 border-gray-300 dark:border-gray-600 rounded-xl hover:border-primary-500 transition-colors text-center cursor-pointer"
                    data-plan-wizard-target="dailyHoursOption"
                    data-value="10"
                    data-action="click->plan-wizard#selectDailyHours">
              <span class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white block mb-1">10h</span>
              <span class="text-gray-600 dark:text-gray-400 text-xs"><%= t('wizard.preferences.intensive', default: 'Intenzivno') %></span>
            </button>
          </div>
        </div>
      </div>

      <!-- Step 3: Interests -->
      <div data-plan-wizard-target="step" class="hidden">
        <div class="text-center mb-6 sm:mb-8">
          <h2 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-white mb-2">
            <%= t('wizard.interests.title') %>
          </h2>
          <p class="text-sm sm:text-base text-gray-600 dark:text-gray-400">
            <%= t('wizard.interests.subtitle') %>
          </p>
        </div>

        <!-- Interest tags with load more -->
        <div class="pb-4">
          <div class="flex flex-wrap gap-2 sm:gap-3 justify-center" data-plan-wizard-target="interestsContainer">
            <% initial_count = 8 %>
            <% @supported_interests.each_with_index do |interest, index| %>
              <button type="button"
                      class="px-3 sm:px-5 py-2 sm:py-3 rounded-full border-2 border-transparent bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-primary-100 dark:hover:bg-primary-900/30 transition-colors cursor-pointer font-medium text-sm sm:text-base <%= index >= initial_count ? 'hidden' : '' %>"
                      data-plan-wizard-target="interestTag"
                      data-tag="<%= interest %>"
                      data-action="click->plan-wizard#toggleInterest"
                      data-interest-index="<%= index %>">
                <%= interest_icon(interest) %>
                <%= interest_label(interest) %>
              </button>
            <% end %>
          </div>

          <% if @supported_interests.size > initial_count %>
            <div class="text-center mt-4" data-plan-wizard-target="loadMoreContainer">
              <button type="button"
                      class="inline-flex items-center gap-2 px-4 py-2 text-sm text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium transition-colors"
                      data-action="click->plan-wizard#loadMoreInterests"
                      data-plan-wizard-target="loadMoreButton"
                      data-initial-count="<%= initial_count %>"
                      data-total-count="<%= @supported_interests.size %>">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
                <%= t('common.show_more', default: 'Prika쬴 vi코e') %>
                <span class="text-gray-400">(<%= @supported_interests.size - initial_count %>)</span>
              </button>
            </div>
          <% end %>
        </div>

        <p class="text-center text-sm text-gray-500 dark:text-gray-400 mt-4">
          <%= t('common.optional') %>
        </p>
      </div>

      <!-- Navigation -->
      <div class="flex justify-between items-center mt-6 sm:mt-8 pt-4 sm:pt-6 border-t border-gray-200 dark:border-gray-700">
        <button type="button"
                class="btn-secondary invisible text-sm sm:text-base"
                data-plan-wizard-target="prevButton"
                data-action="click->plan-wizard#prevStep">
          <svg class="w-4 h-4 sm:w-5 sm:h-5 inline-block mr-1 -mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          <%= t('common.back') %>
        </button>

        <button type="button"
                class="btn-primary text-sm sm:text-base"
                data-plan-wizard-target="nextButton"
                data-action="click->plan-wizard#nextStep">
          <%= t('common.next') %>
          <svg class="w-4 h-4 sm:w-5 sm:h-5 inline-block ml-1 -mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </button>

        <button type="button"
                class="btn-primary hidden text-sm sm:text-base"
                data-plan-wizard-target="submitButton"
                data-action="click->plan-wizard#generatePlan">
          <svg class="w-4 h-4 sm:w-5 sm:h-5 inline-block mr-1 -mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          <%= t('wizard.generate.button') %>
        </button>
      </div>
    </div>
  </div>
</div>
