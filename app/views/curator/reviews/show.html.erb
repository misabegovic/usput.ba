<div class="space-y-4 sm:space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-xl sm:text-2xl font-bold text-gray-900"><%= t("curator.reviews.show_title") %></h1>
    <%= link_to t("curator.reviews.back_to_list"), curator_reviews_path, class: "text-sm text-emerald-600 hover:text-emerald-900" %>
  </div>

  <div class="rounded-lg bg-white shadow">
    <div class="px-4 py-5 sm:px-6">
      <div class="flex items-center gap-2 mb-4">
        <div class="flex items-center">
          <% @review.rating.times do %>
            <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          <% end %>
          <% (5 - @review.rating).times do %>
            <svg class="h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          <% end %>
        </div>
        <span class="text-lg font-semibold text-gray-900"><%= @review.rating %>/5</span>
      </div>

      <dl class="grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-2">
        <div>
          <dt class="text-sm font-medium text-gray-500"><%= t("curator.reviews.author") %></dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @review.author_name.presence || @review.user&.username || t("reviews.anonymous") %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500"><%= t("curator.reviews.type") %></dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @review.reviewable_type %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500"><%= t("curator.reviews.item") %></dt>
          <dd class="mt-1 text-sm text-gray-900">
            <% if @review.reviewable %>
              <%= @review.reviewable.try(:name) || @review.reviewable.try(:title) %>
            <% else %>
              <span class="text-red-500"><%= t("curator.reviews.deleted_item") %></span>
            <% end %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500"><%= t("curator.reviews.created_at") %></dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @review.created_at.strftime("%d.%m.%Y %H:%M") %></dd>
        </div>
        <div class="sm:col-span-2">
          <dt class="text-sm font-medium text-gray-500"><%= t("curator.reviews.comment") %></dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @review.comment.presence || t("curator.reviews.no_comment") %></dd>
        </div>
      </dl>

      <div class="mt-6 pt-4 border-t border-gray-200">
        <%= button_to curator_review_path(@review),
            method: :delete,
            class: "inline-flex items-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500",
            data: { turbo_confirm: t("curator.reviews.confirm_delete") } do %>
          <%= t("curator.reviews.delete") %>
        <% end %>
      </div>
    </div>
  </div>
</div>
