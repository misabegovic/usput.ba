<div class="space-y-4 sm:space-y-6">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 sm:gap-0">
    <h1 class="text-xl sm:text-2xl font-bold text-gray-900"><%= t("curator.experiences.title") %></h1>
    <%= link_to t("curator.experiences.new"), new_curator_experience_path,
        class: "inline-flex items-center justify-center rounded-md bg-emerald-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500 w-full sm:w-auto" %>
  </div>

  <!-- Pending Proposals -->
  <%= render "curator/shared/pending_proposals" %>

  <!-- Filters Section -->
  <div class="rounded-lg bg-white shadow" data-controller="curator-filters">
    <!-- Mobile Filter Toggle -->
    <div class="sm:hidden">
      <button type="button"
              data-action="click->curator-filters#toggle"
              class="w-full flex items-center justify-between px-4 py-3 text-sm font-medium text-gray-700">
        <span class="flex items-center gap-2">
          <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 3c2.755 0 5.455.232 8.083.678.533.09.917.556.917 1.096v1.044a2.25 2.25 0 01-.659 1.591l-5.432 5.432a2.25 2.25 0 00-.659 1.591v2.927a2.25 2.25 0 01-1.244 2.013L9.75 21v-6.568a2.25 2.25 0 00-.659-1.591L3.659 7.409A2.25 2.25 0 013 5.818V4.774c0-.54.384-1.006.917-1.096A48.32 48.32 0 0112 3z" />
          </svg>
          <%= t("curator.experiences.filter.title", default: "Filters") %>
          <% active_filters = [params[:city_name], params[:search], params[:category_id]].compact_blank.size %>
          <% if active_filters > 0 %>
            <span class="inline-flex items-center rounded-full bg-emerald-100 px-2 py-0.5 text-xs font-medium text-emerald-800">
              <%= active_filters %>
            </span>
          <% end %>
        </span>
        <svg class="h-5 w-5 text-gray-400 transition-transform duration-200"
             data-curator-filters-target="icon"
             fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
        </svg>
      </button>
    </div>

    <!-- Filter Content -->
    <div class="hidden sm:block px-4 py-4" data-curator-filters-target="content">
      <%= form_with url: curator_experiences_path, method: :get, class: "flex flex-col sm:flex-row flex-wrap gap-3" do |f| %>
        <!-- Search Input -->
        <div class="flex-1 min-w-0 sm:max-w-xs">
          <%= f.text_field :search,
              value: params[:search],
              placeholder: t("curator.experiences.filter.search_placeholder", default: "Search by name..."),
              class: "block w-full rounded-md border-gray-300 text-sm shadow-sm focus:border-emerald-500 focus:ring-emerald-500" %>
        </div>

        <!-- City Filter -->
        <div class="w-full sm:w-auto">
          <%= f.select :city_name,
              options_for_select([[t("curator.experiences.filter.all_cities"), ""]] + @city_names.map { |name| [name, name] }, params[:city_name]),
              {},
              class: "block w-full rounded-md border-gray-300 text-sm shadow-sm focus:border-emerald-500 focus:ring-emerald-500",
              onchange: "this.form.submit()" %>
        </div>

        <!-- Category Filter -->
        <div class="w-full sm:w-auto">
          <%= f.select :category_id,
              options_for_select(
                [[t("curator.experiences.filter.all_categories", default: "All categories"), ""]] +
                @experience_categories.map { |cat| [cat.name, cat.id] },
                params[:category_id]
              ),
              {},
              class: "block w-full rounded-md border-gray-300 text-sm shadow-sm focus:border-emerald-500 focus:ring-emerald-500",
              onchange: "this.form.submit()" %>
        </div>

        <!-- Search Button -->
        <div class="w-full sm:w-auto">
          <%= f.submit t("common.search"), class: "w-full sm:w-auto inline-flex justify-center items-center rounded-md bg-emerald-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500 cursor-pointer" %>
        </div>

        <% if params[:city_name].present? || params[:search].present? || params[:category_id].present? %>
          <%= link_to curator_experiences_path, class: "w-full sm:w-auto inline-flex justify-center items-center rounded-md bg-gray-100 px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-200" do %>
            <%= t("filters.clear_all", default: "Clear All") %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Results Count -->
  <div class="flex items-center justify-between text-sm text-gray-600">
    <span><%= t("curator.experiences.count", count: @experiences.total_count, default: "#{@experiences.total_count} experiences") %></span>
    <span class="text-gray-500"><%= t("common.page", default: "Page") %> <%= @experiences.current_page %> / <%= @experiences.total_pages %></span>
  </div>

  <!-- Desktop Table -->
  <div class="hidden sm:block overflow-hidden rounded-lg bg-white shadow">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("curator.experiences.name") %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("curator.experiences.city") %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("curator.experiences.category") %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("curator.experiences.duration") %></th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("curator.experiences.actions") %></th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @experiences.each do |experience| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= experience.title %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= experience.city %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if experience.experience_category %>
                <span class="inline-flex items-center rounded-full bg-emerald-100 px-2.5 py-0.5 text-xs font-medium text-emerald-800">
                  <%= experience.experience_category.name %>
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= experience.formatted_duration %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-3">
              <%= link_to t("curator.experiences.view"), curator_experience_path(experience), class: "text-emerald-600 hover:text-emerald-900" %>
              <%= link_to t("curator.experiences.edit"), edit_curator_experience_path(experience), class: "text-emerald-600 hover:text-emerald-900" %>
              <%= button_to t("curator.experiences.delete"), curator_experience_path(experience),
                  method: :delete,
                  class: "text-red-600 hover:text-red-900",
                  data: { turbo_confirm: t("curator.experiences.confirm_delete", name: experience.title) } %>
            </td>
          </tr>
        <% end %>

        <% if @experiences.empty? %>
          <tr>
            <td colspan="5" class="px-6 py-8 text-center text-gray-500">
              <%= t("curator.experiences.no_experiences") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Mobile Card Layout -->
  <div class="sm:hidden space-y-3">
    <% @experiences.each do |experience| %>
      <div class="bg-white rounded-lg shadow p-4">
        <div class="flex items-start justify-between mb-2">
          <div class="flex-1 min-w-0">
            <h3 class="font-medium text-gray-900 truncate"><%= experience.title %></h3>
            <p class="text-sm text-gray-500"><%= experience.city %></p>
          </div>
        </div>

        <div class="flex flex-wrap items-center gap-3 text-sm text-gray-500 mb-3">
          <% if experience.experience_category %>
            <span class="inline-flex items-center rounded-full bg-emerald-100 px-2 py-0.5 text-xs font-medium text-emerald-800">
              <%= experience.experience_category.name %>
            </span>
          <% end %>
          <span class="flex items-center gap-1">
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <%= experience.formatted_duration %>
          </span>
        </div>

        <div class="flex items-center gap-4 pt-3 border-t border-gray-100">
          <%= link_to curator_experience_path(experience), class: "flex-1 text-center py-2 text-sm font-medium text-emerald-600 hover:text-emerald-900" do %>
            <%= t("curator.experiences.view") %>
          <% end %>
          <%= link_to edit_curator_experience_path(experience), class: "flex-1 text-center py-2 text-sm font-medium text-emerald-600 hover:text-emerald-900" do %>
            <%= t("curator.experiences.edit") %>
          <% end %>
          <%= button_to curator_experience_path(experience),
              method: :delete,
              class: "flex-1 text-center py-2 text-sm font-medium text-red-600 hover:text-red-900",
              data: { turbo_confirm: t("curator.experiences.confirm_delete", name: experience.title) } do %>
            <%= t("curator.experiences.delete") %>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @experiences.empty? %>
      <div class="bg-white rounded-lg shadow p-8 text-center text-gray-500">
        <%= t("curator.experiences.no_experiences") %>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <% if @experiences.total_pages > 1 %>
    <div class="flex justify-center">
      <%= paginate @experiences %>
    </div>
  <% end %>
</div>
