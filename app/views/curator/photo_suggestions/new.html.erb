<div class="space-y-4 sm:space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-xl sm:text-2xl font-bold text-gray-900"><%= t("curator.photo_suggestions.new_title") %></h1>
      <p class="mt-1 text-sm text-gray-500">
        <%= t("curator.photo_suggestions.for_location") %>:
        <%= link_to @location.name, curator_location_path(@location), class: "text-emerald-600 hover:text-emerald-900" %>
      </p>
    </div>
    <%= link_to t("common.cancel"), curator_location_path(@location), class: "text-sm text-gray-600 hover:text-gray-900" %>
  </div>

  <div class="overflow-hidden rounded-lg bg-white shadow">
    <div class="px-4 py-5 sm:px-6">
      <%= form_with model: @photo_suggestion, url: curator_location_photo_suggestions_path(@location), local: true do |f| %>
        <div class="space-y-6">
          <%# Photo upload option %>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              <%= t("curator.photo_suggestions.photo_source") %>
            </label>

            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <%# File upload %>
              <div class="border-2 border-dashed border-gray-300 rounded-lg p-4 hover:border-emerald-500 transition-colors">
                <label for="photo_suggestion_photo" class="block cursor-pointer">
                  <div class="text-center">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5m-13.5-9L12 3m0 0l4.5 4.5M12 3v13.5" />
                    </svg>
                    <p class="mt-2 text-sm font-medium text-gray-900"><%= t("curator.photo_suggestions.upload_photo") %></p>
                    <p class="mt-1 text-xs text-gray-500"><%= t("curator.photo_suggestions.upload_hint") %></p>
                  </div>
                  <%= f.file_field :photo, accept: "image/*", class: "sr-only", id: "photo_suggestion_photo",
                      onchange: "document.getElementById('photo_preview').src = URL.createObjectURL(this.files[0]); document.getElementById('photo_preview_container').classList.remove('hidden');" %>
                </label>
                <div id="photo_preview_container" class="hidden mt-4">
                  <img id="photo_preview" class="w-full h-40 object-cover rounded-lg" />
                </div>
              </div>

              <%# URL input %>
              <div class="border-2 border-gray-300 rounded-lg p-4">
                <div class="text-center mb-4">
                  <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244" />
                  </svg>
                  <p class="mt-2 text-sm font-medium text-gray-900"><%= t("curator.photo_suggestions.or_paste_url") %></p>
                </div>
                <%= f.text_field :photo_url,
                    placeholder: "https://example.com/photo.jpg",
                    class: "block w-full rounded-md border-0 py-2 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-emerald-600 sm:text-sm" %>
              </div>
            </div>
          </div>

          <%# Description %>
          <div>
            <label for="photo_suggestion_description" class="block text-sm font-medium text-gray-700 mb-2">
              <%= t("curator.photo_suggestions.description") %>
              <span class="text-gray-400 font-normal">(<%= t("common.optional") %>)</span>
            </label>
            <%= f.text_area :description,
                rows: 3,
                placeholder: t("curator.photo_suggestions.description_hint"),
                class: "block w-full rounded-md border-0 py-2 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-emerald-600 sm:text-sm" %>
          </div>

          <%# Submit %>
          <div class="flex items-center justify-end gap-3 pt-4 border-t border-gray-200">
            <%= link_to t("common.cancel"), curator_location_path(@location),
                class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
            <%= f.submit t("curator.photo_suggestions.submit"),
                class: "rounded-md bg-emerald-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-600 cursor-pointer" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
