<div class="min-h-screen bg-gray-50 dark:bg-gray-900 transition-colors duration-300 overflow-x-hidden"
     data-controller="travel-profile"
     data-travel-profile-item-id-value="<%= @experience.uuid %>"
     data-travel-profile-item-type-value="experience"
     data-travel-profile-item-name-value="<%= @experience.translate(:title, I18n.locale) %>"
     data-travel-profile-logged-in-value="<%= logged_in? %>"
     data-travel-profile-translations-value="<%= travel_profile_translations_json %>">
  <%# Navigation %>
  <%= render "new_design/header" %>

  <%# Spacer for fixed header %>
  <div class="h-20"></div>

  <%# Hero Section - Styled like homepage %>
  <div class="relative isolate bg-white dark:bg-gray-900 overflow-hidden">
    <%# SVG Pattern Background %>
    <svg aria-hidden="true" class="absolute inset-x-0 top-0 -z-10 h-full w-full [mask-image:radial-gradient(32rem_32rem_at_center,white,transparent)] stroke-gray-200 dark:stroke-white/10">
      <defs>
        <pattern id="experience-hero-pattern" width="200" height="200" x="50%" y="-1" patternUnits="userSpaceOnUse">
          <path d="M.5 200V.5H200" fill="none" />
        </pattern>
      </defs>
      <svg x="50%" y="-1" class="overflow-visible fill-gray-50 dark:fill-gray-800">
        <path d="M-200 0h201v201h-201Z M600 0h201v201h-201Z M-400 600h201v201h-201Z M200 800h201v201h-201Z" stroke-width="0" />
      </svg>
      <rect width="100%" height="100%" fill="url(#experience-hero-pattern)" stroke-width="0" />
    </svg>

    <%# Blur gradient accent %>
    <div aria-hidden="true" class="absolute top-0 right-0 left-1/2 -z-10 -ml-24 transform-gpu overflow-hidden blur-3xl lg:ml-24 xl:ml-48">
      <div style="clip-path: polygon(63.1% 29.5%, 100% 17.1%, 76.6% 3%, 48.4% 0%, 44.6% 4.7%, 54.5% 25.3%, 59.8% 49%, 55.2% 57.8%, 44.4% 57.2%, 27.8% 47.9%, 35.1% 81.5%, 0% 97.7%, 39.2% 100%, 35.2% 81.4%, 97.2% 52.8%, 63.1% 29.5%); aspect-ratio: 801/1036;" class="w-[50rem] bg-gradient-to-tr from-purple-400/30 to-indigo-400/30 dark:from-purple-600/20 dark:to-indigo-500/20 opacity-70"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-8 pb-12">
      <%# Back link %>
      <%= link_to smart_back_path, class: "inline-flex items-center text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white mb-6 transition-colors" do %>
        <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        <%= t("common.back") %>
      <% end %>

      <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-8">
        <%# Left side - Title and basic info %>
        <div class="flex-1 min-w-0">
          <span class="inline-block px-3 py-1 bg-purple-100 dark:bg-purple-900/30 rounded-full text-xs font-semibold text-purple-600 dark:text-purple-400 mb-4">
            <%= t("experiences.badge", default: "Iskustvo") %>
          </span>
          <h1 class="text-4xl sm:text-5xl font-extrabold tracking-tight text-gray-900 dark:text-white break-words">
            <%= @experience.translate(:title, I18n.locale) %>
          </h1>

          <%# Duration and locations count %>
          <div class="flex flex-wrap items-center gap-x-4 gap-y-2 mt-4 text-gray-600 dark:text-gray-400">
            <% if @experience.formatted_duration %>
              <span class="flex items-center">
                <svg class="w-5 h-5 mr-2 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <%= @experience.formatted_duration %>
              </span>
            <% end %>
            <span class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              </svg>
              <%= t("experiences.locations_count", count: @experience.locations_count) %>
            </span>
          </div>

          <%# Rating inline %>
          <div class="flex flex-wrap items-center gap-x-3 gap-y-2 mt-4">
            <div class="flex items-center">
              <%= render "shared/star_rating", rating: @experience.average_rating %>
            </div>
            <span class="text-2xl font-bold text-gray-900 dark:text-white"><%= number_with_precision(@experience.average_rating, precision: 1) %></span>
            <span class="text-gray-500 dark:text-gray-400 text-sm sm:text-base">(<%= @experience.reviews_count %> <%= t("reviews.count", count: @experience.reviews_count) %>)</span>
          </div>
        </div>

        <%# Right side - Action buttons %>
        <div class="flex flex-wrap gap-3 lg:flex-col lg:w-auto">
          <%# Action buttons %>
          <div class="flex gap-2 flex-wrap">
            <%# Share Button %>
            <div data-controller="share" data-share-success-message-value="<%= t('common.link_copied', default: 'Link kopiran!') %>">
              <button data-share-target="button"
                      data-action="click->share#copy"
                      class="inline-flex items-center space-x-2 px-4 py-2.5 bg-gray-100 dark:bg-gray-800 rounded-xl hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
                      aria-label="<%= t('common.share', default: 'Podijeli') %>">
                <svg data-share-target="icon" class="w-5 h-5 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path>
                </svg>
                <svg data-share-target="checkIcon" class="w-5 h-5 text-emerald-500 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span data-share-target="text" class="text-sm font-medium text-gray-700 dark:text-gray-300"><%= t('common.share', default: 'Podijeli') %></span>
              </button>
            </div>

            <%# Favorite Button %>
            <button data-action="click->travel-profile#toggleFavorite"
                    data-travel-profile-target="favoriteButton"
                    class="inline-flex items-center space-x-2 px-4 py-2.5 bg-gray-100 dark:bg-gray-800 rounded-xl hover:bg-red-100 dark:hover:bg-red-900/30 transition-colors group"
                    aria-label="<%= t('profile.add_favorite', default: 'Dodaj u omiljene') %>"
                    title="<%= t('profile.add_favorite', default: 'Dodaj u omiljene') %>">
              <svg class="w-5 h-5 text-gray-600 dark:text-gray-300 group-hover:text-red-500 heart-empty transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
              <svg class="w-5 h-5 text-red-500 heart-filled hidden" fill="currentColor" viewBox="0 0 24 24">
                <path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-red-500 transition-colors"><%= t('profile.add_favorite', default: 'Spremi') %></span>
            </button>
          </div>

          <%# Feedback message area %>
          <div data-travel-profile-target="feedbackMessage"
               class="hidden mt-3 px-4 py-3 rounded-xl text-sm font-medium transition-all">
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# Photo Gallery Section - Photos from all locations in experience %>
  <% all_photos = @experience.locations.flat_map { |loc| loc.photos.to_a }.compact %>
  <% if all_photos.any? %>
    <div class="bg-gray-100 dark:bg-gray-800 py-6"
         data-controller="photo-gallery"
         data-photo-gallery-index-value="0">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white flex items-center">
            <svg class="w-5 h-5 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <%= t("experiences.show.photos", default: "Fotografije lokacija") %>
            <span class="ml-2 text-sm font-normal text-gray-500 dark:text-gray-400">(<%= all_photos.count %>)</span>
          </h2>
          <button data-action="click->photo-gallery#openLightbox"
                  data-index="0"
                  class="text-sm text-purple-600 dark:text-purple-400 hover:text-purple-700 dark:hover:text-purple-300 font-medium flex items-center">
            <%= t("experiences.show.view_all", default: "Pogledaj sve") %>
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"></path>
            </svg>
          </button>
        </div>

        <%# Horizontal slider %>
        <div class="flex gap-3 overflow-x-auto pb-4 snap-x snap-mandatory scrollbar-thin scrollbar-thumb-gray-300 dark:scrollbar-thumb-gray-600 scrollbar-track-transparent"
             data-photo-gallery-target="slider">
          <% all_photos.each_with_index do |photo, index| %>
            <button data-action="click->photo-gallery#openLightbox"
                    data-index="<%= index %>"
                    data-photo-gallery-target="thumbnail"
                    class="flex-shrink-0 snap-start rounded-xl overflow-hidden ring-2 transition-all hover:ring-purple-400 focus:outline-none focus:ring-purple-500 <%= index == 0 ? 'ring-purple-500' : 'ring-transparent' %>"
                    aria-label="<%= t('experiences.show.view_photo', number: index + 1, default: 'Pogledaj fotografiju %{number}') %>">
              <%= image_tag photo.variant(resize_to_fill: [400, 300]), class: "w-48 h-36 sm:w-56 sm:h-40 object-cover", alt: "#{@experience.translate(:title, I18n.locale)} - #{index + 1}" %>
            </button>
          <% end %>
        </div>
      </div>

      <%# Lightbox Modal %>
      <div data-photo-gallery-target="lightbox"
           data-action="click->photo-gallery#closeLightboxOnBackground"
           class="hidden fixed inset-0 z-50 bg-black/95 flex items-center justify-center">
        <%# Close button %>
        <button data-action="click->photo-gallery#closeLightbox"
                class="absolute top-4 right-4 p-2 text-white/70 hover:text-white transition-colors z-10"
                aria-label="<%= t('common.close', default: 'Zatvori') %>">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>

        <%# Counter %>
        <div data-photo-gallery-target="lightboxCounter"
             class="absolute top-4 left-4 px-3 py-1.5 bg-black/60 rounded-full text-white text-sm font-medium">
          1 / <%= all_photos.count %>
        </div>

        <%# Navigation arrows %>
        <% if all_photos.count > 1 %>
          <button data-action="click->photo-gallery#previous"
                  class="absolute left-4 top-1/2 -translate-y-1/2 p-3 bg-black/50 hover:bg-black/70 rounded-full text-white transition-colors"
                  aria-label="<%= t('common.previous', default: 'Prethodna') %>">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
          </button>
          <button data-action="click->photo-gallery#next"
                  class="absolute right-4 top-1/2 -translate-y-1/2 p-3 bg-black/50 hover:bg-black/70 rounded-full text-white transition-colors"
                  aria-label="<%= t('common.next', default: 'Sljedeća') %>">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </button>
        <% end %>

        <%# Main image %>
        <div class="max-w-6xl max-h-[85vh] mx-4">
          <img data-photo-gallery-target="lightboxImage"
               src=""
               alt=""
               class="max-w-full max-h-[85vh] object-contain rounded-lg">
        </div>

        <%# Thumbnail strip at bottom %>
        <div class="absolute bottom-4 left-0 right-0 px-4">
          <div class="max-w-4xl mx-auto flex gap-2 justify-center overflow-x-auto pb-2">
            <% all_photos.each_with_index do |photo, index| %>
              <button data-action="click->photo-gallery#goTo"
                      data-index="<%= index %>"
                      data-photo-gallery-target="lightboxThumbnail"
                      class="flex-shrink-0 w-16 h-12 rounded-lg overflow-hidden ring-2 transition-all hover:opacity-100 <%= index == 0 ? 'ring-purple-500 opacity-100' : 'ring-transparent opacity-60' %>"
                      aria-label="<%= t('experiences.show.go_to_photo', number: index + 1, default: 'Idi na fotografiju %{number}') %>">
                <%= image_tag photo.variant(resize_to_fill: [128, 96]), class: "w-full h-full object-cover", alt: "Thumbnail #{index + 1}" %>
              </button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%# Content %>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid gap-8 lg:grid-cols-3">
      <%# Main Content %>
      <div class="lg:col-span-2 space-y-8">
        <%# Description %>
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-4 sm:p-6 shadow-lg">
          <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4"><%= t("experiences.show.about", default: "O iskustvu") %></h2>
          <p class="text-gray-700 dark:text-gray-300 leading-relaxed break-words whitespace-pre-line [overflow-wrap:anywhere]">
            <%= @experience.translate(:description, I18n.locale) %>
          </p>
        </div>

        <%# Locations in Experience %>
        <% if @experience.locations.any? %>
          <div class="bg-white dark:bg-gray-800 rounded-2xl p-4 sm:p-6 shadow-lg">
            <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4"><%= t("experiences.show.locations", default: "Lokacije u iskustvu") %></h2>
            <div class="flow-root">
              <ul role="list" class="-mb-8">
                <% @experience.locations.each_with_index do |location, idx| %>
                  <% is_last = idx == @experience.locations.length - 1 %>
                  <li>
                    <div class="relative pb-8">
                      <%# Connector line - hide for last item %>
                      <% unless is_last %>
                        <span aria-hidden="true" class="absolute top-5 left-5 -ml-px h-full w-0.5 bg-gray-200 dark:bg-white/10"></span>
                      <% end %>
                      <div class="relative flex items-start space-x-3 sm:space-x-4">
                        <%# Timeline icon %>
                        <div class="relative">
                          <% if location.photos.attached? %>
                            <%= link_to location_path(location), class: "block" do %>
                              <%= image_tag location.photos.first.variant(resize_to_fill: [40, 40]), class: "size-10 rounded-full object-cover ring-4 ring-white dark:ring-gray-800", alt: location.translate(:name, I18n.locale) %>
                            <% end %>
                          <% else %>
                            <%= link_to location_path(location), class: "flex size-10 items-center justify-center rounded-full bg-gradient-to-br from-emerald-500 to-teal-600 ring-4 ring-white dark:ring-gray-800" do %>
                              <svg class="size-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                              </svg>
                            <% end %>
                          <% end %>
                        </div>
                        <%# Content %>
                        <div class="flex min-w-0 flex-1 justify-between space-x-3 sm:space-x-4 pt-1">
                          <div class="min-w-0 flex-1">
                            <%= link_to location_path(location), class: "group" do %>
                              <p class="font-medium text-gray-900 dark:text-white group-hover:text-emerald-600 dark:group-hover:text-emerald-400 transition-colors break-words">
                                <%= location.translate(:name, I18n.locale) %>
                              </p>
                            <% end %>
                            <% if location.translate(:description, I18n.locale).present? %>
                              <p class="mt-1 text-sm text-gray-500 dark:text-gray-400 line-clamp-2 break-words">
                                <%= location.translate(:description, I18n.locale) %>
                              </p>
                            <% end %>
                            <%# Tags %>
                            <div class="flex flex-wrap items-center gap-2 mt-2">
                              <span class="inline-flex items-center text-xs text-gray-500 dark:text-gray-400">
                                <%= t("locations.types.#{location.location_type}") %>
                              </span>
                              <span class="inline-flex items-center text-xs text-gray-500 dark:text-gray-400">
                                <%= t("locations.budget.#{location.budget}") %>
                              </span>
                              <% if location.average_rating.to_f > 0 %>
                                <span class="inline-flex items-center text-xs text-emerald-600 dark:text-emerald-400">
                                  <svg class="w-3.5 h-3.5 mr-0.5" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                  </svg>
                                  <%= number_with_precision(location.average_rating, precision: 1) %>
                                </span>
                              <% end %>
                            </div>
                          </div>
                          <%# Step number on the right %>
                          <div class="text-right text-sm whitespace-nowrap text-gray-400 dark:text-gray-500 flex-shrink-0 ml-2">
                            <%= idx + 1 %>/<%= @experience.locations.length %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <%# Reviews Section %>
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-4 sm:p-6 shadow-lg">
          <%= render "reviews/reviews_section", reviewable: @experience %>
        </div>
      </div>

      <%# Sidebar %>
      <div class="space-y-6">
        <%# Quick Info %>
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-4 sm:p-6 shadow-lg">
          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4"><%= t("experiences.show.info", default: "Informacije") %></h3>
          <div class="space-y-4">
            <% if @experience.formatted_duration %>
              <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-1 sm:gap-0">
                <span class="text-gray-600 dark:text-gray-400"><%= t("experiences.show.duration", default: "Trajanje") %></span>
                <span class="font-medium text-gray-900 dark:text-white"><%= @experience.formatted_duration %></span>
              </div>
            <% end %>
            <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-1 sm:gap-0">
              <span class="text-gray-600 dark:text-gray-400"><%= t("experiences.show.locations_count", default: "Broj lokacija") %></span>
              <span class="font-medium text-gray-900 dark:text-white"><%= @experience.locations_count %></span>
            </div>
          </div>
        </div>

        <%# Contact Information %>
        <% if @experience.has_contact_info? %>
          <div class="bg-white dark:bg-gray-800 rounded-2xl p-4 sm:p-6 shadow-lg">
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center">
              <svg class="w-5 h-5 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <%= t("experiences.show.contact", default: "Kontakt") %>
            </h3>
            <div class="space-y-3">
              <% if @experience.contact_name.present? %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-3 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  <span class="text-gray-700 dark:text-gray-300 break-words"><%= @experience.contact_name %></span>
                </div>
              <% end %>

              <% if @experience.contact_email.present? %>
                <a href="mailto:<%= @experience.contact_email %>" class="flex items-center text-purple-600 dark:text-purple-400 hover:underline min-w-0">
                  <svg class="w-5 h-5 mr-3 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  <span class="truncate"><%= @experience.contact_email %></span>
                </a>
              <% end %>

              <% if @experience.contact_phone.present? %>
                <a href="tel:<%= @experience.contact_phone.gsub(/\s/, '') %>" class="flex items-center text-purple-600 dark:text-purple-400 hover:underline">
                  <svg class="w-5 h-5 mr-3 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                  <span class="break-all"><%= @experience.contact_phone %></span>
                </a>
              <% end %>

              <% if @experience.contact_website.present? %>
                <a href="<%= @experience.contact_website.start_with?('http') ? @experience.contact_website : "https://#{@experience.contact_website}" %>"
                   target="_blank"
                   rel="noopener noreferrer"
                   class="flex items-center text-purple-600 dark:text-purple-400 hover:underline">
                  <svg class="w-5 h-5 mr-3 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                  </svg>
                  <span class="truncate"><%= @experience.contact_website.gsub(/^https?:\/\//, '').truncate(30) %></span>
                </a>
              <% end %>
            </div>
          </div>
        <% end %>

        <%# Nearby Experiences %>
        <% if @nearby_experiences.any? %>
          <div class="bg-white dark:bg-gray-800 rounded-2xl p-4 sm:p-6 shadow-lg">
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4"><%= t("experiences.show.nearby_experiences", default: "Iskustva u blizini") %></h3>
            <div class="space-y-4">
              <% @nearby_experiences.each do |nearby| %>
                <%= link_to experience_path(nearby), class: "block group" do %>
                  <div class="flex items-start space-x-3">
                    <% if nearby.cover_photo.attached? %>
                      <%= image_tag nearby.cover_photo, class: "w-16 h-16 rounded-lg object-cover flex-shrink-0", alt: nearby.translate(:title, I18n.locale) %>
                    <% else %>
                      <div class="w-16 h-16 rounded-lg bg-gradient-to-br from-purple-500 to-indigo-600 flex items-center justify-center flex-shrink-0">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                      </div>
                    <% end %>
                    <div class="flex-1 min-w-0">
                      <p class="font-medium text-gray-900 dark:text-white group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors truncate">
                        <%= nearby.translate(:title, I18n.locale) %>
                      </p>
                      <div class="flex items-center mt-1">
                        <%= render "shared/star_rating", rating: nearby.average_rating, size: "sm" %>
                        <span class="ml-1 text-xs text-gray-500 dark:text-gray-400"><%= number_with_precision(nearby.average_rating, precision: 1) %></span>
                      </div>
                      <% if nearby.formatted_duration %>
                        <p class="text-xs text-gray-500 dark:text-gray-400 mt-0.5"><%= nearby.formatted_duration %></p>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
            <%# Link to explore all experiences in this city %>
            <% if @experience.city.present? %>
              <%= link_to explore_path(city: @experience.city, type: "experiences"), class: "mt-4 flex items-center justify-center w-full py-2.5 px-4 bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 rounded-xl text-gray-700 dark:text-gray-300 text-sm font-medium transition-colors" do %>
                <%= t("experiences.show.see_all_experiences", default: "Pogledaj sva iskustva") %>
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              <% end %>
            <% end %>
          </div>
        <% end %>

        <%# Related Plans %>
        <% if @related_plans.any? %>
          <div class="bg-white dark:bg-gray-800 rounded-2xl p-4 sm:p-6 shadow-lg">
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4">
              <div class="flex items-center">
                <svg class="w-5 h-5 mr-2 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                </svg>
                <%= t("experiences.show.related_plans", default: "Planovi s ovim iskustvom") %>
              </div>
            </h3>
            <div class="space-y-4">
              <% @related_plans.first(3).each do |plan| %>
                <%= link_to plan_path(plan), class: "block group" do %>
                  <div class="flex items-start space-x-3">
                    <div class="w-16 h-16 rounded-lg bg-gradient-to-br from-amber-500 to-orange-600 flex items-center justify-center flex-shrink-0">
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                      </svg>
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="font-medium text-gray-900 dark:text-white group-hover:text-emerald-600 dark:group-hover:text-emerald-400 transition-colors truncate">
                        <%= plan.display_title %>
                      </p>
                      <div class="flex items-center mt-1">
                        <%= render "shared/star_rating", rating: plan.average_rating, size: "sm" %>
                        <span class="ml-1 text-xs text-gray-500 dark:text-gray-400"><%= number_with_precision(plan.average_rating || 0, precision: 1) %></span>
                      </div>
                      <% if plan.start_date.present? && plan.end_date.present? %>
                        <p class="text-xs text-gray-500 dark:text-gray-400 mt-0.5">
                          <%= t("plans.duration_days", count: (plan.end_date - plan.start_date).to_i + 1, default: "%{count} dana") %>
                        </p>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
            <% if @total_plans_count > 3 %>
              <%= link_to explore_path(types: ["plan"], q: @experience.title), class: "mt-4 flex items-center justify-center w-full py-2.5 px-4 bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 rounded-xl text-gray-700 dark:text-gray-300 text-sm font-medium transition-colors" do %>
                <%= t("experiences.show.see_all_plans", default: "Pogledaj sve planove") %> (<%= @total_plans_count %>)
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              <% end %>
            <% end %>
          </div>
        <% end %>

        <%# CTA - Add to Plan %>
        <div class="bg-gradient-to-br from-purple-500 to-indigo-600 rounded-2xl p-4 sm:p-6 text-white text-center"
             data-controller="add-to-plan"
             data-add-to-plan-experience-id-value="<%= @experience.uuid %>"
             data-add-to-plan-experience-title-value="<%= @experience.translate(:title, I18n.locale) %>"
             data-add-to-plan-experience-description-value="<%= @experience.translate(:description, I18n.locale).truncate(150) %>"
             data-add-to-plan-experience-duration-value="<%= @experience.formatted_duration %>">

            <%# When user has no plan %>
            <div data-add-to-plan-target="noplanMessage">
              <h3 class="font-bold text-lg mb-2"><%= t("experiences.show.cta_title", default: "Dodaj u plan") %></h3>
              <p class="text-white/80 text-sm mb-4"><%= t("experiences.show.cta_description", default: "Kreiraj vlastiti plan putovanja") %></p>
              <%= link_to plan_wizard_path, class: "inline-flex items-center bg-white text-purple-700 px-6 py-3 rounded-lg font-medium hover:bg-gray-100 transition-colors" do %>
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                <%= t("home.cta.create_plan", default: "Kreiraj Plan") %>
              <% end %>
            </div>

            <%# When user has existing plan %>
            <div data-add-to-plan-target="hasplanMessage" class="hidden">
              <h3 class="font-bold text-lg mb-2"><%= t("experiences.show.add_to_existing", default: "Dodaj u postojeći plan") %></h3>
              <p class="text-white/80 text-sm mb-4"><%= t("experiences.show.add_to_existing_desc", default: "Imate aktivan plan. Dodajte ovo iskustvo.") %></p>

              <%# Plan selector (shown when multiple plans) %>
              <div data-add-to-plan-target="planSelector" class="hidden"></div>

              <button type="button"
                      data-add-to-plan-target="addButton"
                      data-action="click->add-to-plan#addToPlan"
                      class="w-full inline-flex items-center justify-center bg-white text-purple-700 px-6 py-3 rounded-lg font-medium hover:bg-gray-100 active:bg-gray-200 transition-colors mb-3">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                <%= t("experiences.show.add_button", default: "Dodaj u plan") %>
              </button>
              <%= link_to plan_view_path, class: "inline-flex items-center text-white/80 hover:text-white text-sm transition-colors" do %>
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
                <%= t("experiences.show.view_plan", default: "Pogledaj plan") %>
              <% end %>
            </div>

            <%# Feedback message %>
            <div data-add-to-plan-target="feedback" class="hidden"></div>
        </div>
      </div>
    </div>
  </div>

  <%= render "new_design/footer" %>
</div>
