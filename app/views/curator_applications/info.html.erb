<div class="min-h-screen bg-gray-50 dark:bg-gray-900 py-12">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
      <div class="px-6 py-8 sm:p-10">
        <!-- Header -->
        <div class="text-center mb-8">
          <div class="mx-auto w-16 h-16 bg-emerald-100 dark:bg-emerald-900/30 rounded-full flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-emerald-600 dark:text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
            </svg>
          </div>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
            <%= t("curator_applications.info.title") %>
          </h1>
          <p class="mt-3 text-lg text-gray-600 dark:text-gray-400">
            <%= t("curator_applications.info.subtitle") %>
          </p>
        </div>

        <!-- Benefits -->
        <div class="mb-8 p-6 bg-emerald-50 dark:bg-emerald-900/20 rounded-lg">
          <h3 class="font-semibold text-emerald-800 dark:text-emerald-300 mb-4 text-lg">
            <%= t("curator_applications.new.benefits_title") %>
          </h3>
          <ul class="text-emerald-700 dark:text-emerald-400 space-y-3">
            <li class="flex items-start">
              <svg class="w-5 h-5 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              <%= t("curator_applications.new.benefit_1") %>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              <%= t("curator_applications.new.benefit_2") %>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              <%= t("curator_applications.new.benefit_3") %>
            </li>
          </ul>
        </div>

        <!-- How it works -->
        <div class="mb-8">
          <h3 class="font-semibold text-gray-900 dark:text-white mb-4 text-lg">
            <%= t("curator_applications.info.how_it_works") %>
          </h3>
          <div class="space-y-4">
            <div class="flex items-start">
              <div class="flex-shrink-0 w-8 h-8 bg-emerald-600 text-white rounded-full flex items-center justify-center text-sm font-semibold">1</div>
              <p class="ml-4 text-gray-600 dark:text-gray-400"><%= t("curator_applications.info.step_1") %></p>
            </div>
            <div class="flex items-start">
              <div class="flex-shrink-0 w-8 h-8 bg-emerald-600 text-white rounded-full flex items-center justify-center text-sm font-semibold">2</div>
              <p class="ml-4 text-gray-600 dark:text-gray-400"><%= t("curator_applications.info.step_2") %></p>
            </div>
            <div class="flex items-start">
              <div class="flex-shrink-0 w-8 h-8 bg-emerald-600 text-white rounded-full flex items-center justify-center text-sm font-semibold">3</div>
              <p class="ml-4 text-gray-600 dark:text-gray-400"><%= t("curator_applications.info.step_3") %></p>
            </div>
          </div>
        </div>

        <!-- Call to Action -->
        <div class="border-t border-gray-200 dark:border-gray-700 pt-8">
          <% if logged_in? %>
            <% if current_user.can_curate? %>
              <!-- Already a curator -->
              <div class="text-center">
                <div class="mb-4 p-4 bg-emerald-50 dark:bg-emerald-900/20 rounded-lg">
                  <p class="text-emerald-700 dark:text-emerald-400">
                    <%= t("curator_applications.info.already_curator") %>
                  </p>
                </div>
                <%= link_to t("curator_applications.show.go_to_dashboard"), curator_root_path,
                    class: "inline-flex justify-center rounded-md bg-emerald-600 px-6 py-3 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-600" %>
              </div>
            <% elsif current_user.pending_curator_application? %>
              <!-- Has pending application -->
              <div class="text-center">
                <div class="mb-4 p-4 bg-yellow-50 dark:bg-yellow-900/20 rounded-lg">
                  <p class="text-yellow-700 dark:text-yellow-400">
                    <%= t("curator_applications.info.pending_application") %>
                  </p>
                </div>
                <%= link_to t("curator_applications.info.view_application"), curator_application_path(current_user.curator_applications.pending.last),
                    class: "inline-flex justify-center rounded-md bg-gray-600 px-6 py-3 text-sm font-semibold text-white shadow-sm hover:bg-gray-500" %>
              </div>
            <% else %>
              <!-- Can apply -->
              <div class="text-center">
                <%= link_to t("curator_applications.info.apply_now"), new_curator_application_path,
                    class: "inline-flex justify-center rounded-md bg-emerald-600 px-8 py-3 text-base font-semibold text-white shadow-sm hover:bg-emerald-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-600" %>
              </div>
            <% end %>
          <% else %>
            <!-- Not logged in - need to create profile first -->
            <div class="text-center">
              <div class="mb-6 p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
                <p class="text-blue-700 dark:text-blue-400 font-medium">
                  <%= t("curator_applications.info.create_profile_first") %>
                </p>
                <p class="text-blue-600 dark:text-blue-500 text-sm mt-1">
                  <%= t("curator_applications.info.create_profile_hint") %>
                </p>
              </div>
              <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <%= link_to t("auth.register_link"), register_path(redirect_to: become_curator_path),
                    class: "inline-flex justify-center rounded-md bg-emerald-600 px-6 py-3 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-600" %>
                <%= link_to t("auth.login_link"), login_path(redirect_to: become_curator_path),
                    class: "inline-flex justify-center rounded-md bg-white dark:bg-gray-700 px-6 py-3 text-sm font-semibold text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
