<div class="min-h-screen bg-gray-50 dark:bg-gray-900 py-12">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
      <div class="px-6 py-8 sm:p-10">
        <div class="text-center mb-8">
          <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
            <%= t("curator_applications.show.title") %>
          </h1>
        </div>

        <!-- Status Badge -->
        <div class="flex justify-center mb-8">
          <% case @application.status %>
          <% when "pending" %>
            <span class="inline-flex items-center rounded-full bg-yellow-100 dark:bg-yellow-900/30 px-4 py-2 text-sm font-medium text-yellow-800 dark:text-yellow-300">
              <svg class="mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
              </svg>
              <%= t("curator_applications.status.pending") %>
            </span>
          <% when "approved" %>
            <span class="inline-flex items-center rounded-full bg-green-100 dark:bg-green-900/30 px-4 py-2 text-sm font-medium text-green-800 dark:text-green-300">
              <svg class="mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <%= t("curator_applications.status.approved") %>
            </span>
          <% when "rejected" %>
            <span class="inline-flex items-center rounded-full bg-red-100 dark:bg-red-900/30 px-4 py-2 text-sm font-medium text-red-800 dark:text-red-300">
              <svg class="mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              <%= t("curator_applications.status.rejected") %>
            </span>
          <% end %>
        </div>

        <!-- Status Message -->
        <div class="text-center mb-8">
          <% case @application.status %>
          <% when "pending" %>
            <p class="text-gray-600 dark:text-gray-400">
              <%= t("curator_applications.show.pending_message") %>
            </p>
          <% when "approved" %>
            <p class="text-green-600 dark:text-green-400 mb-4">
              <%= t("curator_applications.show.approved_message") %>
            </p>
            <%= link_to t("curator_applications.show.go_to_dashboard"), curator_root_path,
                class: "inline-flex justify-center rounded-md bg-emerald-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500" %>
          <% when "rejected" %>
            <p class="text-red-600 dark:text-red-400">
              <%= t("curator_applications.show.rejected_message") %>
            </p>
            <% if @application.admin_notes.present? %>
              <div class="mt-4 p-4 bg-gray-100 dark:bg-gray-700 rounded-lg text-left">
                <p class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                  <%= t("curator_applications.show.feedback") %>:
                </p>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  <%= @application.admin_notes %>
                </p>
              </div>
            <% end %>
          <% end %>
        </div>

        <!-- Application Details -->
        <div class="border-t border-gray-200 dark:border-gray-700 pt-6">
          <dl class="space-y-4">
            <div>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">
                <%= t("curator_applications.show.submitted_at") %>
              </dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-white">
                <%= l(@application.created_at, format: :long) %>
              </dd>
            </div>

            <% if @application.reviewed_at.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">
                  <%= t("curator_applications.show.reviewed_at") %>
                </dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-white">
                  <%= l(@application.reviewed_at, format: :long) %>
                </dd>
              </div>
            <% end %>

            <div>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">
                <%= t("curator_applications.form.motivation") %>
              </dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-white whitespace-pre-wrap">
                <%= @application.motivation %>
              </dd>
            </div>

            <% if @application.experience.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">
                  <%= t("curator_applications.form.experience") %>
                </dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-white whitespace-pre-wrap">
                  <%= @application.experience %>
                </dd>
              </div>
            <% end %>
          </dl>
        </div>

        <div class="mt-8 text-center">
          <%= link_to t("common.back"), root_path,
              class: "text-sm font-medium text-emerald-600 dark:text-emerald-400 hover:text-emerald-500" %>
        </div>
      </div>
    </div>
  </div>
</div>
