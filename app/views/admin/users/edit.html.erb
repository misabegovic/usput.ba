<div class="space-y-6">
  <div class="sm:flex sm:items-center sm:justify-between">
    <h1 class="text-xl sm:text-2xl font-bold text-gray-900"><%= t("admin.users.edit_title", username: @user.username) %></h1>
    <div class="mt-3 sm:mt-0">
      <%= link_to t("admin.users.back_to_list"), admin_users_path,
          class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    </div>
  </div>

  <div class="overflow-hidden rounded-lg bg-white shadow">
    <div class="px-4 py-4 sm:p-6">
      <%= form_with model: [:admin, @user], class: "space-y-5 sm:space-y-6" do |f| %>
        <% if @user.errors.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <div class="text-sm text-red-700">
              <ul class="list-disc pl-5 space-y-1">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <div>
          <label class="block text-sm font-medium text-gray-700"><%= t("admin.users.username") %></label>
          <p class="mt-1 text-sm text-gray-900"><%= @user.username %></p>
        </div>

        <div>
          <%= f.label :user_type, t("admin.users.type"), class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :user_type,
              options_for_select([
                [t("admin.users.types.basic"), "basic"],
                [t("admin.users.types.curator"), "curator"]
              ], @user.user_type),
              {},
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm" %>
          <p class="mt-2 text-sm text-gray-500"><%= t("admin.users.type_help") %></p>
        </div>

        <%= render "admin/shared/admin_credentials" %>

        <div class="flex flex-col-reverse sm:flex-row sm:justify-end gap-3">
          <%= link_to t("common.cancel"), admin_users_path,
              class: "text-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
          <%= f.submit t("common.save"), class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
