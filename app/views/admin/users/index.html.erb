<div class="space-y-6">
  <div class="sm:flex sm:items-center sm:justify-between">
    <h1 class="text-xl sm:text-2xl font-bold text-gray-900"><%= t("admin.users.title") %></h1>
    <div class="mt-3 sm:mt-0">
      <%= form_with url: admin_users_path, method: :get, class: "flex items-center gap-2" do |f| %>
        <%= f.select :user_type,
            options_for_select([
              [t("admin.users.filter.all"), ""],
              [t("admin.users.types.basic"), "basic"],
              [t("admin.users.types.curator"), "curator"],
              [t("admin.users.types.admin"), "admin"]
            ], params[:user_type]),
            {},
            class: "rounded-md border-gray-300 text-sm w-full sm:w-auto",
            onchange: "this.form.submit()" %>
      <% end %>
    </div>
  </div>

  <!-- Desktop Table -->
  <div class="hidden sm:block overflow-hidden rounded-lg bg-white shadow">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.users.username") %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.users.type") %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.users.created_at") %></th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.users.actions") %></th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @users.each do |user| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= user.username %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium
                <%= case user.user_type
                    when 'basic' then 'bg-gray-100 text-gray-800'
                    when 'curator' then 'bg-emerald-100 text-emerald-800'
                    when 'admin' then 'bg-indigo-100 text-indigo-800'
                    end %>">
                <%= t("admin.users.types.#{user.user_type}") %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= user.created_at.strftime("%d.%m.%Y %H:%M") %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-3">
              <%= link_to t("admin.users.view"), admin_user_path(user), class: "text-indigo-600 hover:text-indigo-900" %>
              <%= link_to t("admin.users.edit"), edit_admin_user_path(user), class: "text-indigo-600 hover:text-indigo-900" %>
              <% unless user == current_user %>
                <%= button_to t("admin.users.delete"), admin_user_path(user),
                    method: :delete,
                    class: "text-red-600 hover:text-red-900",
                    data: { turbo_confirm: t("admin.users.confirm_delete", username: user.username) } %>
              <% end %>
            </td>
          </tr>
        <% end %>

        <% if @users.empty? %>
          <tr>
            <td colspan="4" class="px-6 py-8 text-center text-gray-500">
              <%= t("admin.users.no_users") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Mobile Card Layout -->
  <div class="sm:hidden space-y-3">
    <% @users.each do |user| %>
      <div class="bg-white rounded-lg shadow p-4">
        <div class="flex items-center justify-between mb-3">
          <span class="font-medium text-gray-900"><%= user.username %></span>
          <span class="inline-flex items-center rounded-full px-2 py-0.5 text-xs font-medium
            <%= case user.user_type
                when 'basic' then 'bg-gray-100 text-gray-800'
                when 'curator' then 'bg-emerald-100 text-emerald-800'
                when 'admin' then 'bg-indigo-100 text-indigo-800'
                end %>">
            <%= t("admin.users.types.#{user.user_type}") %>
          </span>
        </div>
        <div class="text-sm text-gray-500 mb-3">
          <%= user.created_at.strftime("%d.%m.%Y %H:%M") %>
        </div>
        <div class="flex items-center gap-4 text-sm">
          <%= link_to t("admin.users.view"), admin_user_path(user), class: "text-indigo-600 hover:text-indigo-900" %>
          <%= link_to t("admin.users.edit"), edit_admin_user_path(user), class: "text-indigo-600 hover:text-indigo-900" %>
          <% unless user == current_user %>
            <%= button_to t("admin.users.delete"), admin_user_path(user),
                method: :delete,
                class: "text-red-600 hover:text-red-900",
                data: { turbo_confirm: t("admin.users.confirm_delete", username: user.username) } %>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @users.empty? %>
      <div class="bg-white rounded-lg shadow p-8 text-center text-gray-500">
        <%= t("admin.users.no_users") %>
      </div>
    <% end %>
  </div>
</div>
