<% case status[:status] %>
<% when "in_progress" %>
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <svg class="h-5 w-5 text-blue-500 animate-spin" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <div>
          <span class="text-blue-800 font-medium">Rebuild in progress</span>
          <p class="text-blue-600 text-sm"><%= status[:message] %></p>
        </div>
      </div>
      <%= button_to "Force Reset", admin_force_reset_rebuild_plans_admin_ai_path, method: :post, class: "text-xs text-blue-600 hover:text-blue-800 underline", data: { confirm: "Are you sure? This will cancel the current rebuild." } %>
    </div>
  </div>

<% when "completed" %>
  <div class="bg-green-50 border border-green-200 rounded-lg p-4">
    <div class="flex items-start gap-3">
      <svg class="h-5 w-5 text-green-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
      <div class="flex-1">
        <span class="text-green-800 font-medium">
          <%= status[:results]["dry_run"] ? "Analysis completed (preview)" : "Rebuild completed" %>
        </span>
        <p class="text-green-600 text-sm"><%= status[:message] %></p>
        <% if status[:results].present? %>
          <div class="mt-2 grid grid-cols-2 sm:grid-cols-4 gap-2 text-xs">
            <div class="bg-green-100 rounded px-2 py-1">
              <span class="text-green-700">Analyzed:</span>
              <span class="font-medium text-green-900"><%= status[:results]["total_analyzed"] || 0 %></span>
            </div>
            <div class="bg-green-100 rounded px-2 py-1">
              <span class="text-green-700">Issues found:</span>
              <span class="font-medium text-green-900"><%= status[:results]["issues_found"] || 0 %></span>
            </div>
            <div class="bg-green-100 rounded px-2 py-1">
              <span class="text-green-700">Similar pairs:</span>
              <span class="font-medium text-green-900"><%= status[:results]["similar_pairs_found"] || 0 %></span>
            </div>
            <% if status[:results]["plans_to_delete_count"].to_i > 0 || status[:results]["dry_run"] %>
              <div class="bg-red-100 rounded px-2 py-1">
                <span class="text-red-700">To delete:</span>
                <span class="font-medium text-red-900"><%= status[:results]["plans_to_delete_count"] || 0 %></span>
              </div>
            <% end %>
            <div class="bg-green-100 rounded px-2 py-1">
              <span class="text-green-700">Rebuilt:</span>
              <span class="font-medium text-green-900"><%= status[:results]["plans_rebuilt"] || 0 %></span>
            </div>
            <% if status[:results]["plans_deleted"].to_i > 0 && !status[:results]["dry_run"] %>
              <div class="bg-red-100 rounded px-2 py-1">
                <span class="text-red-700">Deleted:</span>
                <span class="font-medium text-red-900"><%= status[:results]["plans_deleted"] %></span>
              </div>
            <% end %>
            <% if status[:results]["errors"].present? && status[:results]["errors"].any? %>
              <div class="bg-yellow-100 rounded px-2 py-1">
                <span class="text-yellow-700">Errors:</span>
                <span class="font-medium text-yellow-900"><%= status[:results]["errors"].count %></span>
              </div>
            <% end %>
          </div>

          <% if status[:results]["analysis_report"].present? %>
            <details class="mt-3">
              <summary class="cursor-pointer text-sm text-green-700 hover:text-green-900">View detailed report</summary>
              <div class="mt-2 bg-white rounded p-3 text-xs">
                <% report = status[:results]["analysis_report"] %>

                <% if report["issues_by_severity"].present? %>
                  <div class="mb-3">
                    <strong class="text-gray-700">Issues by Severity:</strong>
                    <div class="flex gap-3 mt-1">
                      <span class="text-red-600">Critical: <%= report["issues_by_severity"]["critical"] || 0 %></span>
                      <span class="text-orange-600">High: <%= report["issues_by_severity"]["high"] || 0 %></span>
                      <span class="text-yellow-600">Medium: <%= report["issues_by_severity"]["medium"] || 0 %></span>
                      <span class="text-gray-600">Low: <%= report["issues_by_severity"]["low"] || 0 %></span>
                    </div>
                  </div>
                <% end %>

                <% if report["issues_by_type"].present? && report["issues_by_type"].any? %>
                  <div class="mb-3">
                    <strong class="text-gray-700">Issues by Type:</strong>
                    <ul class="mt-1 space-y-1">
                      <% report["issues_by_type"].each do |type, count| %>
                        <li><span class="text-gray-600"><%= type.to_s.humanize %>:</span> <%= count %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>

                <% if report["deletable_plans"].present? && report["deletable_plans"].any? %>
                  <div class="mb-3">
                    <strong class="text-red-700">Plans to delete (unsalvageable):</strong>
                    <ul class="mt-1 space-y-1 max-h-40 overflow-y-auto">
                      <% report["deletable_plans"].take(10).each do |plan| %>
                        <li class="text-red-600">
                          <span class="font-medium"><%= plan["title"] %></span>
                          <span class="text-red-500 text-xs ml-1">(<%= plan["delete_reason"] %>)</span>
                        </li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>

                <% if report["worst_plans"].present? && report["worst_plans"].any? %>
                  <div class="mb-3">
                    <strong class="text-gray-700">Plans to rebuild:</strong>
                    <ul class="mt-1 space-y-1 max-h-40 overflow-y-auto">
                      <% report["worst_plans"].take(10).each do |plan| %>
                        <li class="flex justify-between">
                          <span class="text-gray-800"><%= plan["title"] %> <span class="text-gray-500">(<%= plan["profile"] || "no profile" %>)</span></span>
                          <span class="text-gray-500">Score: <%= plan["score"] %>/100</span>
                        </li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>

                <% if report["similar_plans"].present? && report["similar_plans"].any? %>
                  <div>
                    <strong class="text-gray-700">Similar plan pairs:</strong>
                    <ul class="mt-1 space-y-1 max-h-40 overflow-y-auto">
                      <% report["similar_plans"].take(5).each do |pair| %>
                        <li class="text-gray-600">
                          "<%= pair.dig("plan_1", "title") %>" vs "<%= pair.dig("plan_2", "title") %>"
                          (<%= (pair.dig("similarity", "overall").to_f * 100).round %>% similar)
                          <% if pair.dig("similarity", "same_profile") && pair.dig("similarity", "same_city") %>
                            <span class="text-red-500 text-xs">[same profile+city]</span>
                          <% end %>
                        </li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
              </div>
            </details>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

<% when "failed" %>
  <div class="bg-red-50 border border-red-200 rounded-lg p-4">
    <div class="flex items-start gap-3">
      <svg class="h-5 w-5 text-red-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
      </svg>
      <div>
        <span class="text-red-800 font-medium">Rebuild failed</span>
        <p class="text-red-600 text-sm"><%= status[:message] %></p>
      </div>
    </div>
  </div>

<% else %>
  <div class="text-gray-500 text-sm">No recent rebuild activity</div>
<% end %>
