<div class="space-y-6">
  <h1 class="text-xl sm:text-2xl md:text-3xl font-bold text-gray-900">AI Content Generator</h1>

  <!-- Job Stats -->
  <div class="grid grid-cols-2 sm:grid-cols-4 gap-2 sm:gap-4">
    <div class="bg-yellow-100 p-3 sm:p-4 rounded-lg text-center">
      <div class="text-xl sm:text-3xl font-bold text-yellow-700"><%= @stats[:pending] %></div>
      <div class="text-xs sm:text-sm text-yellow-600">Pending</div>
    </div>
    <div class="bg-blue-100 p-3 sm:p-4 rounded-lg text-center">
      <div class="text-xl sm:text-3xl font-bold text-blue-700"><%= @stats[:processing] %></div>
      <div class="text-xs sm:text-sm text-blue-600">Processing</div>
    </div>
    <div class="bg-green-100 p-3 sm:p-4 rounded-lg text-center">
      <div class="text-xl sm:text-3xl font-bold text-green-700"><%= @stats[:completed] %></div>
      <div class="text-xs sm:text-sm text-green-600">Completed</div>
    </div>
    <div class="bg-red-100 p-3 sm:p-4 rounded-lg text-center">
      <div class="text-xl sm:text-3xl font-bold text-red-700"><%= @stats[:failed] %></div>
      <div class="text-xs sm:text-sm text-red-600">Failed</div>
    </div>
  </div>

  <!-- Content Stats -->
  <div class="grid grid-cols-2 sm:grid-cols-4 gap-2 sm:gap-4">
    <div class="bg-white border border-gray-200 p-3 sm:p-4 rounded-lg text-center">
      <div class="text-xl sm:text-3xl font-bold text-gray-700"><%= @content_stats[:total_locations] %></div>
      <div class="text-xs sm:text-sm text-gray-500">Total Locations</div>
    </div>
    <div class="bg-white border border-gray-200 p-3 sm:p-4 rounded-lg text-center">
      <div class="text-xl sm:text-3xl font-bold text-teal-700"><%= @content_stats[:total_experiences] %></div>
      <div class="text-xs sm:text-sm text-teal-600">Total Experiences</div>
    </div>
    <div class="bg-white border border-gray-200 p-3 sm:p-4 rounded-lg text-center">
      <div class="text-xl sm:text-3xl font-bold text-purple-700"><%= @content_stats[:locations_with_audio] %></div>
      <div class="text-xs sm:text-sm text-purple-600">With Audio Tours</div>
    </div>
    <div class="bg-white border border-gray-200 p-3 sm:p-4 rounded-lg text-center">
      <div class="text-xl sm:text-3xl font-bold text-gray-700"><%= @content_stats[:total_cities] %></div>
      <div class="text-xs sm:text-sm text-gray-500">Total Cities</div>
    </div>
  </div>

  <!-- Generation History -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <h2 class="text-lg sm:text-xl font-semibold p-4 sm:p-6 border-b">Generation History</h2>

    <!-- Desktop Table -->
    <div class="hidden md:block">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">City</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Results</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Duration</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @generations.each do |generation| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="font-medium text-gray-900"><%= generation.city_name %></div>
                <div class="text-sm text-gray-500"><%= generation.created_at.strftime("%Y-%m-%d %H:%M") %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="text-sm text-gray-900"><%= generation.generation_type.humanize %></span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% case generation.status %>
                <% when "pending" %>
                  <span class="px-2 py-1 text-xs rounded-full bg-yellow-100 text-yellow-800">Pending</span>
                <% when "processing" %>
                  <span class="px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-800">Processing</span>
                <% when "completed" %>
                  <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">Completed</span>
                <% when "failed" %>
                  <span class="px-2 py-1 text-xs rounded-full bg-red-100 text-red-800">Failed</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <% if generation.completed? %>
                  <%= generation.locations_created %> locations, <%= generation.experiences_created %> experiences
                <% elsif generation.failed? %>
                  <span class="text-red-600" title="<%= generation.error_message %>">
                    <%= truncate(generation.error_message, length: 50) %>
                  </span>
                <% else %>
                  -
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <% if generation.duration %>
                  <%= number_with_precision(generation.duration, precision: 1) %>s
                <% else %>
                  -
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <% if generation.failed? %>
                  <%= button_to "Retry", retry_admin_ai_generation_path(generation),
                      method: :post,
                      class: "text-blue-600 hover:text-blue-800" %>
                <% end %>
              </td>
            </tr>
          <% end %>

          <% if @generations.empty? %>
            <tr>
              <td colspan="6" class="px-6 py-8 text-center text-gray-500">
                No generations yet.
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Mobile Card Layout -->
    <div class="md:hidden divide-y divide-gray-200">
      <% @generations.each do |generation| %>
        <div class="p-4">
          <div class="flex items-center justify-between mb-2">
            <span class="font-medium text-gray-900"><%= generation.city_name %></span>
            <% case generation.status %>
            <% when "pending" %>
              <span class="px-2 py-0.5 text-xs rounded-full bg-yellow-100 text-yellow-800">Pending</span>
            <% when "processing" %>
              <span class="px-2 py-0.5 text-xs rounded-full bg-blue-100 text-blue-800">Processing</span>
            <% when "completed" %>
              <span class="px-2 py-0.5 text-xs rounded-full bg-green-100 text-green-800">Completed</span>
            <% when "failed" %>
              <span class="px-2 py-0.5 text-xs rounded-full bg-red-100 text-red-800">Failed</span>
            <% end %>
          </div>
          <div class="text-sm text-gray-500 mb-2">
            <span><%= generation.generation_type.humanize %></span>
            <span class="mx-1">•</span>
            <span><%= generation.created_at.strftime("%d.%m.%Y %H:%M") %></span>
          </div>
          <div class="text-sm text-gray-500">
            <% if generation.completed? %>
              <span class="text-green-600"><%= generation.locations_created %> locations, <%= generation.experiences_created %> experiences</span>
              <% if generation.duration %>
                <span class="mx-1">•</span>
                <span><%= number_with_precision(generation.duration, precision: 1) %>s</span>
              <% end %>
            <% elsif generation.failed? %>
              <span class="text-red-600" title="<%= generation.error_message %>">
                <%= truncate(generation.error_message, length: 40) %>
              </span>
            <% end %>
          </div>
          <% if generation.failed? %>
            <div class="mt-2">
              <%= button_to "Retry", retry_admin_ai_generation_path(generation),
                  method: :post,
                  class: "text-blue-600 hover:text-blue-800 text-sm" %>
            </div>
          <% end %>
        </div>
      <% end %>

      <% if @generations.empty? %>
        <div class="p-8 text-center text-gray-500">
          No generations yet.
        </div>
      <% end %>
    </div>

    <% if @generations.respond_to?(:total_pages) && @generations.total_pages > 1 %>
      <div class="px-4 sm:px-6 py-4 border-t">
        <%= paginate @generations %>
      </div>
    <% end %>
  </div>
</div>
