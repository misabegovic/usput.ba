<div class="space-y-6">
  <h1 class="text-xl sm:text-2xl font-bold text-gray-900"><%= t("admin.dashboard.welcome") %></h1>

  <!-- User Stats -->
  <div class="grid grid-cols-1 gap-3 sm:gap-5 sm:grid-cols-3">
    <div class="overflow-hidden rounded-lg bg-white px-4 py-4 shadow sm:p-6">
      <dt class="truncate text-sm font-medium text-gray-500"><%= t("admin.dashboard.total_users") %></dt>
      <dd class="mt-1 text-2xl sm:text-3xl font-semibold tracking-tight text-gray-900"><%= @stats[:total_users] %></dd>
    </div>
    <div class="overflow-hidden rounded-lg bg-blue-50 px-4 py-4 shadow sm:p-6">
      <dt class="truncate text-sm font-medium text-blue-600"><%= t("admin.dashboard.basic_users") %></dt>
      <dd class="mt-1 text-2xl sm:text-3xl font-semibold tracking-tight text-blue-900"><%= @stats[:basic_users] %></dd>
    </div>
    <div class="overflow-hidden rounded-lg bg-emerald-50 px-4 py-4 shadow sm:p-6">
      <dt class="truncate text-sm font-medium text-emerald-600"><%= t("admin.dashboard.curator_users") %></dt>
      <dd class="mt-1 text-2xl sm:text-3xl font-semibold tracking-tight text-emerald-900"><%= @stats[:curator_users] %></dd>
    </div>
  </div>

  <!-- Content Stats -->
  <div class="grid grid-cols-1 gap-3 sm:gap-5 sm:grid-cols-3">
    <div class="overflow-hidden rounded-lg bg-white px-4 py-4 shadow sm:p-6">
      <dt class="truncate text-sm font-medium text-gray-500"><%= t("admin.dashboard.total_locations") %></dt>
      <dd class="mt-1 text-2xl sm:text-3xl font-semibold tracking-tight text-gray-900"><%= @stats[:locations_count] %></dd>
    </div>
    <div class="overflow-hidden rounded-lg bg-white px-4 py-4 shadow sm:p-6">
      <dt class="truncate text-sm font-medium text-gray-500"><%= t("admin.dashboard.total_experiences") %></dt>
      <dd class="mt-1 text-2xl sm:text-3xl font-semibold tracking-tight text-gray-900"><%= @stats[:experiences_count] %></dd>
    </div>
    <div class="overflow-hidden rounded-lg bg-white px-4 py-4 shadow sm:p-6">
      <dt class="truncate text-sm font-medium text-gray-500"><%= t("admin.dashboard.total_cities") %></dt>
      <dd class="mt-1 text-2xl sm:text-3xl font-semibold tracking-tight text-gray-900"><%= @stats[:cities_count] %></dd>
    </div>
  </div>

  <!-- Pending Actions -->
  <div class="grid grid-cols-1 gap-3 sm:gap-5 sm:grid-cols-3">
    <% if @stats[:pending_proposals] > 0 %>
      <%= link_to admin_content_changes_path, class: "overflow-hidden rounded-lg bg-amber-50 border border-amber-200 px-4 py-4 shadow sm:p-6 hover:bg-amber-100 transition-colors" do %>
        <dt class="truncate text-sm font-medium text-amber-600"><%= t("admin.dashboard.pending_proposals") %></dt>
        <dd class="mt-1 text-2xl sm:text-3xl font-semibold tracking-tight text-amber-900"><%= @stats[:pending_proposals] %></dd>
        <dd class="mt-1 text-xs text-amber-600"><%= t("admin.dashboard.click_to_review") %></dd>
      <% end %>
    <% else %>
      <div class="overflow-hidden rounded-lg bg-green-50 px-4 py-4 shadow sm:p-6">
        <dt class="truncate text-sm font-medium text-green-600"><%= t("admin.dashboard.pending_proposals") %></dt>
        <dd class="mt-1 text-2xl sm:text-3xl font-semibold tracking-tight text-green-900">0</dd>
        <dd class="mt-1 text-xs text-green-600"><%= t("admin.dashboard.all_reviewed") %></dd>
      </div>
    <% end %>

    <div class="overflow-hidden rounded-lg <%= @stats[:pending_photo_suggestions] > 0 ? 'bg-blue-50 border border-blue-200' : 'bg-white' %> px-4 py-4 shadow sm:p-6">
      <dt class="truncate text-sm font-medium <%= @stats[:pending_photo_suggestions] > 0 ? 'text-blue-600' : 'text-gray-500' %>"><%= t("admin.dashboard.pending_photos") %></dt>
      <dd class="mt-1 text-2xl sm:text-3xl font-semibold tracking-tight <%= @stats[:pending_photo_suggestions] > 0 ? 'text-blue-900' : 'text-gray-900' %>"><%= @stats[:pending_photo_suggestions] %></dd>
    </div>

    <% if @stats[:blocked_curators] > 0 %>
      <div class="overflow-hidden rounded-lg bg-red-50 border border-red-200 px-4 py-4 shadow sm:p-6">
        <dt class="truncate text-sm font-medium text-red-600"><%= t("admin.dashboard.blocked_curators") %></dt>
        <dd class="mt-1 text-2xl sm:text-3xl font-semibold tracking-tight text-red-900"><%= @stats[:blocked_curators] %></dd>
        <dd class="mt-1 text-xs text-red-600"><%= t("admin.dashboard.spam_blocked") %></dd>
      </div>
    <% else %>
      <div class="overflow-hidden rounded-lg bg-white px-4 py-4 shadow sm:p-6">
        <dt class="truncate text-sm font-medium text-gray-500"><%= t("admin.dashboard.blocked_curators") %></dt>
        <dd class="mt-1 text-2xl sm:text-3xl font-semibold tracking-tight text-gray-900">0</dd>
      </div>
    <% end %>
  </div>

  <!-- Recent Users -->
  <div class="rounded-lg bg-white shadow">
    <div class="px-4 py-4 sm:p-6">
      <h2 class="text-base sm:text-lg font-medium text-gray-900"><%= t("admin.dashboard.recent_users") %></h2>

      <!-- Desktop Table -->
      <div class="mt-4 hidden sm:block overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.users.username") %></th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.users.type") %></th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.users.created_at") %></th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.users.actions") %></th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @stats[:recent_users].each do |user| %>
              <tr>
                <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900"><%= user.username %></td>
                <td class="px-4 py-3 whitespace-nowrap text-sm">
                  <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium
                    <%= user.curator? ? 'bg-emerald-100 text-emerald-800' : 'bg-gray-100 text-gray-800' %>">
                    <%= t("admin.users.types.#{user.user_type}") %>
                  </span>
                </td>
                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500"><%= user.created_at.strftime("%d.%m.%Y %H:%M") %></td>
                <td class="px-4 py-3 whitespace-nowrap text-sm">
                  <%= link_to t("admin.users.edit"), edit_admin_user_path(user), class: "text-indigo-600 hover:text-indigo-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Mobile Card Layout -->
      <div class="mt-4 sm:hidden space-y-3">
        <% @stats[:recent_users].each do |user| %>
          <div class="border border-gray-200 rounded-lg p-3">
            <div class="flex items-center justify-between mb-2">
              <span class="font-medium text-gray-900"><%= user.username %></span>
              <span class="inline-flex items-center rounded-full px-2 py-0.5 text-xs font-medium
                <%= user.curator? ? 'bg-emerald-100 text-emerald-800' : 'bg-gray-100 text-gray-800' %>">
                <%= t("admin.users.types.#{user.user_type}") %>
              </span>
            </div>
            <div class="flex items-center justify-between text-sm">
              <span class="text-gray-500"><%= user.created_at.strftime("%d.%m.%Y") %></span>
              <%= link_to t("admin.users.edit"), edit_admin_user_path(user), class: "text-indigo-600 hover:text-indigo-900" %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="mt-4">
        <%= link_to t("admin.dashboard.view_all_users"), admin_users_path, class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" %>
      </div>
    </div>
  </div>

  <!-- Recent Curator Activities -->
  <div class="rounded-lg bg-white shadow">
    <div class="px-4 py-4 sm:p-6">
      <h2 class="text-base sm:text-lg font-medium text-gray-900 mb-4"><%= t("admin.dashboard.curator_activity") %></h2>

      <% if @recent_activities.any? %>
        <ul class="divide-y divide-gray-200">
          <% @recent_activities.each do |activity| %>
            <li class="py-3">
              <div class="flex items-start space-x-3">
                <div class="flex-shrink-0">
                  <span class="inline-flex items-center justify-center h-8 w-8 rounded-full bg-gray-100">
                    <%= render "curator/shared/activity_icon", activity: activity %>
                  </span>
                </div>
                <div class="min-w-0 flex-1">
                  <div class="text-sm text-gray-900">
                    <%= link_to activity.user.username, admin_user_path(activity.user), class: "font-medium text-indigo-600 hover:text-indigo-900" %>
                    <%= activity.description %>
                  </div>
                  <div class="mt-0.5 text-xs text-gray-500">
                    <%= time_ago_in_words(activity.created_at) %> <%= t("common.ago") %>
                    <% if activity.ip_address.present? %>
                      <span class="text-gray-400">(<%= activity.ip_address %>)</span>
                    <% end %>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>

        <div class="mt-4">
          <%= paginate @recent_activities %>
        </div>
      <% else %>
        <div class="text-center py-6 text-gray-500 text-sm">
          <%= t("curator.activities.no_activities") %>
        </div>
      <% end %>
    </div>
  </div>

</div>
