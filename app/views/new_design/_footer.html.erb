<footer class="bg-white dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 py-16 sm:py-24 lg:px-8 lg:py-32">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8">
      <%# Logo/Brand %>
      <div class="flex items-center">
        <%= link_to root_path, class: "flex items-center" do %>
          <img src="/usput-logo.png" alt="Usput" class="h-9">
          <span class="ml-2 text-xl font-bold text-gray-900 dark:text-white">Usput.ba</span>
        <% end %>
      </div>

      <div class="mt-16 grid grid-cols-2 gap-8 xl:col-span-2 xl:mt-0">
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <%# Istraži %>
          <div>
            <h3 class="text-sm/6 font-semibold text-gray-900 dark:text-white"><%= t("nav.explore", default: "Istražuj") %></h3>
            <ul role="list" class="mt-6 space-y-4">
              <li>
                <%= link_to t("nav.experiences", default: "Iskustva"), explore_path(types: ["experience"]), class: "text-sm/6 text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white" %>
              </li>
              <li>
                <%= link_to t("nav.locations", default: "Lokacije"), explore_path(types: ["location"]), class: "text-sm/6 text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white" %>
              </li>
              <li>
                <%= link_to t("nav.plans", default: "Planovi"), explore_path(types: ["plan"]), class: "text-sm/6 text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white" %>
              </li>
              <li>
                <%= link_to t("home.cta.create_plan", default: "Kreiraj plan"), plan_wizard_path, class: "text-sm/6 text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white" %>
              </li>
            </ul>
          </div>
          <%# Zajednica %>
