<%# Location Card for Explore Results %>
<%= link_to location_path(location), class: "group block bg-white dark:bg-gray-800 rounded-2xl shadow-sm hover:shadow-lg transition-all overflow-hidden", data: { turbo_frame: "_top" } do %>
  <%# Image %>
  <div class="aspect-[4/3] overflow-hidden">
    <% if location.photos.attached? && location.photos.first.present? %>
      <% photo = location.photos.first %>
      <% if photo.variable? %>
        <%= image_tag photo.variant(resize_to_fill: [400, 300]),
            alt: location.name,
            loading: "lazy",
            class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" %>
      <% else %>
        <%= image_tag photo,
            alt: location.name,
            loading: "lazy",
            class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" %>
      <% end %>
    <% else %>
      <div class="w-full h-full bg-gradient-to-br from-blue-100 to-blue-200 dark:from-blue-900/30 dark:to-blue-800/30 flex items-center justify-center">
        <svg class="w-12 h-12 text-blue-400 dark:text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
        </svg>
      </div>
    <% end %>
  </div>

  <%# Content %>
  <div class="p-4">
    <h3 class="font-semibold text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-yellow-400 transition-colors line-clamp-1 break-words">
      <%= location.name %>
    </h3>

    <% if location.city.present? %>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400 flex items-center min-w-0">
        <svg class="w-3.5 h-3.5 mr-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
        </svg>
        <span class="truncate"><%= location.city %></span>
      </p>
    <% end %>

    <% if location.description.present? %>
      <p class="mt-2 text-sm text-gray-600 dark:text-gray-300 line-clamp-2 break-words">
        <%= truncate(strip_tags(location.description), length: 100) %>
      </p>
    <% end %>

    <%# Footer with rating and badges %>
    <div class="mt-3 flex items-center justify-between gap-2 min-w-0">
      <%# Rating %>
      <% if location.average_rating.to_f > 0 %>
        <div class="flex items-center text-sm min-w-0">
          <svg class="w-4 h-4 text-yellow-400 mr-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
          </svg>
          <span class="font-medium text-gray-900 dark:text-white"><%= number_with_precision(location.average_rating, precision: 1) %></span>
          <span class="text-gray-500 dark:text-gray-400 ml-1 truncate">(<%= location.reviews_count %>)</span>
        </div>
      <% else %>
        <span class="text-sm text-gray-400 dark:text-gray-500 truncate"><%= t("explore.no_reviews", default: "Bez recenzija") %></span>
      <% end %>

      <%# Badges %>
      <div class="flex items-center gap-2 flex-shrink-0">
        <% if location.has_audio_tours? %>
          <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-300">
            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15.536a5 5 0 001.414 1.414m2.828-9.9a9 9 0 0112.728 0"></path>
            </svg>
            Audio
          </span>
        <% end %>

        <% if location.budget.present? %>
          <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium
                       <%= case location.budget
                           when 'low' then 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300'
                           when 'medium' then 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300'
                           when 'high' then 'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300'
                           end %>">
            <%= case location.budget
                when 'low' then '$'
                when 'medium' then '$$'
                when 'high' then '$$$'
                end %>
          </span>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
