<%# Plan Card for Explore Results - matching location/experience card design %>
<%= link_to plan_path(plan), class: "group block bg-white dark:bg-gray-800 rounded-2xl shadow-sm hover:shadow-lg transition-all overflow-hidden", data: { turbo_frame: "_top" } do %>
  <%# Gradient header with icon - mimics image area of other cards %>
  <div class="aspect-[4/3] overflow-hidden bg-gradient-to-br from-teal-500 to-emerald-600 flex items-center justify-center">
    <div class="text-center text-white">
      <svg class="w-16 h-16 mx-auto opacity-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
      </svg>
      <p class="mt-2 text-lg font-medium opacity-90"><%= plan.calculated_duration_days %> <%= plan.calculated_duration_days == 1 ? 'dan' : 'dana' %></p>
    </div>
  </div>

  <%# Content %>
  <div class="p-4">
    <h3 class="font-semibold text-gray-900 dark:text-white group-hover:text-teal-600 dark:group-hover:text-teal-400 transition-colors line-clamp-1 break-words">
      <%= plan.display_title.presence || t('profile.my_plans.untitled', default: 'Plan bez naziva') %>
    </h3>

    <% cities = plan.cities.presence || [plan.city_name].compact %>
    <% if cities.any? %>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400 flex items-center min-w-0">
        <svg class="w-3.5 h-3.5 mr-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
        </svg>
        <span class="truncate min-w-0">
          <%= cities.first(2).join(", ") %><% if cities.size > 2 %> <span class="text-gray-400 dark:text-gray-500">+<%= cities.size - 2 %></span><% end %>
        </span>
      </p>
    <% end %>

    <%# Experiences count as description %>
    <% experiences_count = plan.plan_experiences.size %>
    <% if experiences_count > 0 %>
      <p class="mt-2 text-sm text-gray-600 dark:text-gray-300">
        <%= t('profile.my_plans.experiences', count: experiences_count, default: "#{experiences_count} aktivnosti") %>
      </p>
    <% end %>

    <%# Footer with rating %>
    <div class="mt-3 flex items-center justify-between gap-2 min-w-0">
      <%# Rating %>
      <% if plan.average_rating.to_f > 0 %>
        <div class="flex items-center text-sm min-w-0">
          <svg class="w-4 h-4 text-yellow-400 mr-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
          </svg>
          <span class="font-medium text-gray-900 dark:text-white"><%= number_with_precision(plan.average_rating, precision: 1) %></span>
          <span class="text-gray-500 dark:text-gray-400 ml-1 truncate">(<%= plan.reviews_count %>)</span>
        </div>
      <% else %>
        <span class="text-sm text-gray-400 dark:text-gray-500 truncate"><%= t("explore.no_reviews", default: "Bez recenzija") %></span>
      <% end %>

      <%# Created date %>
      <span class="text-xs text-gray-400 dark:text-gray-500 flex-shrink-0">
        <%= l(plan.created_at, format: :short) %>
      </span>
    </div>
  </div>
<% end %>
