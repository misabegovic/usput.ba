<%# Experience Card for Explore Results %>
<%= link_to experience_path(experience), class: "group block bg-white dark:bg-gray-800 rounded-2xl shadow-sm hover:shadow-lg transition-all overflow-hidden", data: { turbo_frame: "_top" } do %>
  <%# Image %>
  <div class="aspect-[4/3] overflow-hidden relative">
    <% if experience.cover_photo.attached? %>
      <% photo = experience.cover_photo %>
      <% if photo.variable? %>
        <%= image_tag photo.variant(resize_to_fill: [400, 300]),
            alt: experience.title,
            loading: "lazy",
            class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" %>
      <% else %>
        <%= image_tag photo,
            alt: experience.title,
            loading: "lazy",
            class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" %>
      <% end %>
    <% else %>
      <div class="w-full h-full bg-gradient-to-br from-purple-100 to-purple-200 dark:from-purple-900/30 dark:to-purple-800/30 flex items-center justify-center">
        <svg class="w-12 h-12 text-purple-400 dark:text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
    <% end %>
    <%# AI Generated / Human Made badge %>
    <% if experience.respond_to?(:ai_generated) %>
      <div class="absolute top-2 left-2">
        <% if experience.ai_generated %>
          <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-indigo-100/90 text-indigo-800 dark:bg-indigo-900/80 dark:text-indigo-200 backdrop-blur-sm">
            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <%= t("explore.ai_generated", default: "AI") %>
          </span>
        <% else %>
          <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-emerald-100/90 text-emerald-800 dark:bg-emerald-900/80 dark:text-emerald-200 backdrop-blur-sm">
            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <%= t("explore.human_made", default: "Human") %>
          </span>
        <% end %>
      </div>
    <% end %>
  </div>

  <%# Content %>
  <div class="p-4">
    <%# Category Badge %>
    <% if experience.experience_category.present? %>
      <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300 mb-2">
        <%= experience.category_name %>
      </span>
    <% end %>

    <h3 class="font-semibold text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-yellow-400 transition-colors line-clamp-1 break-words">
      <%= experience.title %>
    </h3>

    <% cities = experience.cities %>
    <% if cities.any? %>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400 flex items-center min-w-0">
        <svg class="w-3.5 h-3.5 mr-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
        </svg>
        <span class="truncate min-w-0">
          <%= cities.first(2).join(", ") %><% if cities.size > 2 %> <span class="text-gray-400 dark:text-gray-500">+<%= cities.size - 2 %></span><% end %>
        </span>
      </p>
    <% end %>

    <% if experience.description.present? %>
      <p class="mt-2 text-sm text-gray-600 dark:text-gray-300 line-clamp-2 break-words">
        <%= truncate(strip_tags(experience.description), length: 100) %>
      </p>
    <% end %>

    <%# Footer with rating and duration %>
    <div class="mt-3 flex items-center justify-between gap-2 min-w-0">
      <%# Rating %>
      <% if experience.average_rating.to_f > 0 %>
        <div class="flex items-center text-sm min-w-0">
          <svg class="w-4 h-4 text-yellow-400 mr-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
          </svg>
          <span class="font-medium text-gray-900 dark:text-white"><%= number_with_precision(experience.average_rating, precision: 1) %></span>
          <span class="text-gray-500 dark:text-gray-400 ml-1 truncate">(<%= experience.reviews_count %>)</span>
        </div>
      <% else %>
        <span class="text-sm text-gray-400 dark:text-gray-500 truncate"><%= t("explore.no_reviews", default: "Bez recenzija") %></span>
      <% end %>

      <%# Duration %>
      <% if experience.formatted_duration.present? %>
        <span class="inline-flex items-center text-sm text-gray-500 dark:text-gray-400 flex-shrink-0">
          <svg class="w-4 h-4 mr-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <%= experience.formatted_duration %>
        </span>
      <% end %>
    </div>

    <%# Locations count %>
    <% if experience.locations_count > 0 %>
      <div class="mt-2 text-xs text-gray-500 dark:text-gray-400">
        <svg class="w-3.5 h-3.5 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
        </svg>
        <%= t("explore.locations_count", count: experience.locations_count, default: "#{experience.locations_count} lokacija") %>
      </div>
    <% end %>
  </div>
<% end %>
