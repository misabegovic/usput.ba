<%# Registration page %>
<% content_for(:title) { t('auth.register_title', default: 'Registracija - Usput') } %>

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <%# Header %>
    <div class="text-center">
      <a href="<%= root_path %>" class="inline-block hover:opacity-80 transition-opacity">
        <img src="/usput-logo.png" alt="Usput" class="h-12 w-auto">
      </a>
      <h2 class="mt-6 text-3xl font-extrabold text-gray-900 dark:text-white">
        <%= t('auth.register_heading', default: 'Kreiraj nalog') %>
      </h2>
      <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
        <%= t('auth.register_subheading', default: 'Sačuvaj svoj travel profil trajno') %>
      </p>
    </div>

    <%# Registration Form %>
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl p-8">
      <%= form_with model: @user, url: register_path, local: true, class: "space-y-6", data: { controller: "registration-form" } do |f| %>
        <% if @user.errors.any? %>
          <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4">
            <div class="flex">
              <svg class="w-5 h-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
              </svg>
              <div class="ml-3">
                <p class="text-sm text-red-700 dark:text-red-400">
                  <%= @user.errors.full_messages.join(", ") %>
                </p>
              </div>
            </div>
          </div>
        <% end %>

        <%# Username %>
        <div>
          <label for="user_username" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            <%= t('auth.username', default: 'Korisničko ime') %> <span class="text-red-500">*</span>
          </label>
          <%= f.text_field :username,
              class: "w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-colors",
              placeholder: t('auth.username_placeholder', default: 'npr. traveler123'),
              autocomplete: "username",
              required: true %>
          <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
            <%= t('auth.username_hint', default: 'Samo slova, brojevi i donje crte (_). Min 3 karaktera.') %>
          </p>
        </div>

        <%# Password %>
        <div>
          <label for="user_password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            <%= t('auth.password', default: 'Lozinka') %> <span class="text-red-500">*</span>
          </label>
          <%= f.password_field :password,
              class: "w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-colors",
              placeholder: "••••••••",
              autocomplete: "new-password",
              required: true %>
          <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
            <%= t('auth.password_hint', default: 'Minimalno 6 karaktera') %>
          </p>
        </div>

        <%# Password Confirmation %>
        <div>
          <label for="user_password_confirmation" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            <%= t('auth.password_confirmation', default: 'Potvrdi lozinku') %> <span class="text-red-500">*</span>
          </label>
          <%= f.password_field :password_confirmation,
              class: "w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-colors",
              placeholder: "••••••••",
              autocomplete: "new-password",
              required: true %>
        </div>

        <%# Hidden field for travel profile data from localStorage %>
        <input type="hidden" name="travel_profile_data" id="travel_profile_data" data-registration-form-target="profileData">

        <%# Hidden field for plans data from localStorage %>
        <input type="hidden" name="plans_data" id="plans_data" data-registration-form-target="plansData">

        <%# Info about profile sync %>
        <div class="bg-emerald-50 dark:bg-emerald-900/20 border border-emerald-200 dark:border-emerald-800 rounded-lg p-4">
          <div class="flex">
            <svg class="w-5 h-5 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
            <div class="ml-3">
              <p class="text-sm text-emerald-700 dark:text-emerald-400">
                <%= t('auth.profile_sync_info', default: 'Tvoj trenutni travel profil, planovi putovanja i favoriti će biti trajno sačuvani na tvom nalogu.') %>
              </p>
            </div>
          </div>
        </div>

        <%# Submit %>
        <div>
          <%= f.submit t('auth.register_button', default: 'Registruj se'),
              class: "w-full bg-gradient-to-r from-emerald-500 to-teal-600 text-white py-3 px-6 rounded-lg font-medium hover:from-emerald-600 hover:to-teal-700 transition-all shadow-md hover:shadow-lg cursor-pointer" %>
        </div>
      <% end %>

      <%# Login link %>
      <div class="mt-6 text-center">
        <p class="text-sm text-gray-600 dark:text-gray-400">
          <%= t('auth.have_account', default: 'Već imaš nalog?') %>
          <a href="<%= login_path %>" class="font-medium text-emerald-600 dark:text-emerald-400 hover:text-emerald-500">
            <%= t('auth.login_link', default: 'Prijavi se') %>
          </a>
        </p>
      </div>
    </div>
  </div>
</div>

<script nonce="<%= content_security_policy_nonce %>" data-turbo-eval="false">
  // Populate hidden fields with localStorage data on page load
  (function() {
    function populateLocalStorageData() {
      try {
        // Travel profile
        var profile = localStorage.getItem('usput_travel_profile');
        if (profile) {
          var profileField = document.getElementById('travel_profile_data');
          if (profileField) profileField.value = profile;
        }

        // Plans
        var plans = localStorage.getItem('visitumo_plans');
        if (plans) {
          var plansField = document.getElementById('plans_data');
          if (plansField) plansField.value = plans;
        }
      } catch (e) {
        console.error('Could not read data from localStorage:', e);
      }
    }
    // Run immediately since script is at bottom of body
    populateLocalStorageData();
  })();
</script>
