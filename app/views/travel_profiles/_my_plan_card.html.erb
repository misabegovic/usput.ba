<%# Individual plan card for My Plans section %>
<%# Link to plan viewer with plan ID - this loads the plan from localStorage/server for editing %>
<%= link_to plan_view_path(id: plan.local_id || plan.uuid),
    class: "group block bg-gray-50 dark:bg-gray-700/50 rounded-xl p-3 sm:p-4 hover:bg-teal-50 dark:hover:bg-teal-900/20 transition-all hover:shadow-md border border-transparent hover:border-teal-200 dark:hover:border-teal-800",
    data: { turbo_frame: "_top" } do %>
  <div class="flex items-start gap-3 sm:gap-4">
    <%# City icon/badge %>
    <div class="flex-shrink-0 w-10 h-10 sm:w-12 sm:h-12 bg-gradient-to-br from-teal-500 to-emerald-600 rounded-lg sm:rounded-xl flex items-center justify-center text-white shadow-sm">
      <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
      </svg>
    </div>

    <%# Plan info %>
    <div class="flex-1 min-w-0">
      <%# Title %>
      <h3 class="font-semibold text-sm sm:text-base text-gray-900 dark:text-white group-hover:text-teal-600 dark:group-hover:text-teal-400 transition-colors line-clamp-1">
        <%= plan.display_title.presence || t('profile.my_plans.untitled', default: 'Plan bez naziva') %>
      </h3>

      <%# City name %>
      <p class="text-xs sm:text-sm text-gray-600 dark:text-gray-300 mt-0.5 truncate">
        <svg class="w-3 h-3 sm:w-3.5 sm:h-3.5 inline mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <%= plan.city_name.presence || t('profile.my_plans.unknown_city', default: 'Nepoznat grad') %>
      </p>

      <%# Meta info row - wrap on mobile %>
      <div class="flex flex-wrap items-center gap-x-2 gap-y-1 sm:gap-3 mt-2 text-xs text-gray-500 dark:text-gray-400">
        <%# Duration %>
        <span class="inline-flex items-center">
          <svg class="w-3 h-3 sm:w-3.5 sm:h-3.5 mr-0.5 sm:mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <%= plan.calculated_duration_days %><span class="hidden sm:inline">&nbsp;<%= t('wizard.dates.days', default: 'dana') %></span><span class="sm:hidden">d</span>
        </span>

        <%# Experiences count %>
        <% experiences_count = plan.plan_experiences.size %>
        <% if experiences_count > 0 %>
          <span class="inline-flex items-center">
            <svg class="w-3 h-3 sm:w-3.5 sm:h-3.5 mr-0.5 sm:mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <%= experiences_count %><span class="hidden sm:inline">&nbsp;<%= t('profile.my_plans.activities', default: 'aktivnosti') %></span>
          </span>
        <% end %>

        <%# Visibility badge %>
        <% if plan.visibility_public_plan? %>
          <span class="inline-flex items-center text-emerald-600 dark:text-emerald-400">
            <svg class="w-3 h-3 sm:w-3.5 sm:h-3.5 mr-0.5 sm:mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="hidden sm:inline"><%= t('profile.my_plans.public', default: 'Javan') %></span>
          </span>
        <% end %>
      </div>
    </div>

    <%# Arrow indicator - hidden on mobile to save space %>
    <div class="hidden sm:block flex-shrink-0 text-gray-400 dark:text-gray-500 group-hover:text-teal-500 dark:group-hover:text-teal-400 transition-colors">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </div>
  </div>

  <%# Created date %>
  <div class="mt-2 sm:mt-3 pt-2 sm:pt-3 border-t border-gray-200 dark:border-gray-600 text-xs text-gray-400 dark:text-gray-500">
    <%= t('profile.my_plans.created_at', date: l(plan.created_at, format: :short), default: "Kreirano #{l(plan.created_at, format: :short)}") %>
  </div>
<% end %>
